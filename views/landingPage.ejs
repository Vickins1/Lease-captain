}
/* Custom Button Styling */
.btn-outline-light-custom {
    border-color: #003366;
    color: #003366;
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem; 
    transition: background-color 0.3s ease, color 0.3s ease;
    display: inline-flex;
    align-items: center;
}

/* Base Dropdown Styling */
.dropdown-menu {
    margin-top: 10px;
    border-radius: 5px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
    padding: 10px;
}
/* Toggler button custom position */
.custom-toggler {
    position: absolute;
    right: -150px; 
    top: 50%;
    transform: translateY(-50%);
}

/* Ensure the navbar-brand is not affected */
.navbar-brand {
    position: relative;
}

/* Ensure collapse links are still aligned properly */
.navbar-collapse {
    width: 100%;
    text-align: end;
}

/* Change the color of navbar links */
