<!-- Service Area -->
<div class="service-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <div class="section-main-title">
                        <h2>Discover Properties in Kenya</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="service_list owl-carousel">
                <% if (properties && properties.length > 0) { %>
                    <% 
                        // Sort by latest (assuming createdAt exists) and take first 4
                        const latestProperties = properties
                            .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt))
                            .slice(0, 4); 
                    %>
                    <% latestProperties.forEach(property => { %>
                        <div class="service-single-box">
                            <div class="service-thumb">
                                <img src="<%= property.images && property.images.length > 0 ? property.images[0] : '/assets/images/service/default.png' %>" alt="<%= property.name || 'Property Image' %>">
                                <div class="service-rate">
                                    <h4>KSh <%= property.price.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %><span>/Month</span></h4>
                                </div>
                            </div>
                            <div class="service-content">
                                <div class="service-title">
                                    <h4><a href="/property/<%= property._id %>"><%= property.name || 'Unnamed Property' %></a></h4>
                                </div>
                                <div class="service-description">
                                    <p><%= property.description && property.description.length > 100 ? property.description.substring(0, 100) + '...' : property.description || 'No description available.' %></p>
                                </div>
                                <div class="service-facilities">
                                    <ul>
                                        <li>
                                            <div class="service-icon-thumb">
                                                <img src="/assets/images/service/service-icon1.png" alt="Bedroom Icon">
                                            </div>
                                            <span><%= property.bedrooms || 0 %> Bedrooms</span>
                                        </li>
                                        <li>
                                            <div class="service-icon-thumb">
                                                <img src="/assets/images/service/service-icon2.png" alt="Bathroom Icon">
                                            </div>
                                            <span><%= property.bathrooms || 0 %> Bathrooms</span>
                                        </li>
                                        <% if (property.facilities && property.facilities.length > 0) { %>
                                            <li>
                                                <div class="service-icon-thumb">
                                                    <img src="/assets/images/service/service-icon3.png" alt="Facility Icon">
                                                </div>
                                                <span><%= property.facilities[0] %></span>
                                            </li>
                                        <% } %>
                                    </ul>
                                </div>
                                <div class="service-address">
                                    <div class="service-location">
                                        <span><i class="bi bi-geo-alt"></i> <%= property.location || 'N/A' %></span>
                                    </div>
                                    <div class="service-icon">
                                        <span><i class="bi bi-heart"></i></span>
                                        <span><a href="/property/<%= property._id %>"><i class="bi bi-arrow-right"></i></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-lg-12 text-center">
                        <p>No properties found matching your criteria.</p>
                    </div>
                <% } %>
            </div>
        </div>
        <!-- Creative View More Button -->
