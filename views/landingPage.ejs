    <!-- JavaScript for Toggle and Link Updates -->
    <script>
        const monthlyToggle = document.getElementById('monthlyToggle');
        const yearlyToggle = document.getElementById('yearlyToggle');
        const monthlyPrices = document.querySelectorAll('.monthly-price');
        const yearlyPrices = document.querySelectorAll('.yearly-price');
        const planLinks = document.querySelectorAll('.plan-link');

        function togglePricing(activeBtn, inactiveBtn, showClass, hideClass, billingCycle) {
            activeBtn.classList.add('active');
            activeBtn.setAttribute('aria-pressed', 'true');
            inactiveBtn.classList.remove('active');
            inactiveBtn.setAttribute('aria-pressed', 'false');
            showClass.forEach(el => el.classList.remove('d-none'));
            hideClass.forEach(el => el.classList.add('d-none'));

            // Update the href of each "Get Started" link based on billing cycle
            planLinks.forEach(link => {
                const plan = link.getAttribute('data-plan');
                if (plan === 'Premium') {
                    link.href = `/signup?plan=Premium`; // Premium doesn't change
                } else {
                    link.href = `/signup?plan=${plan}-${billingCycle}`;
                }
            });
        }

        monthlyToggle.addEventListener('click', () => togglePricing(monthlyToggle, yearlyToggle, monthlyPrices, yearlyPrices, 'Monthly'));
        yearlyToggle.addEventListener('click', () => togglePricing(yearlyToggle, monthlyToggle, yearlyPrices, monthlyPrices, 'Yearly'));

        // Card hover effect
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', () => card.style.transform = 'scale(1.05)');
            card.addEventListener('mouseleave', () => card.style.transform = 'scale(1)');
        });
    </script>
