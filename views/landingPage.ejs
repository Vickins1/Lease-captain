        <script>
            function closeWelcomeMessage() {
                const welcomeMessage = document.querySelector('.welcome-message');
                welcomeMessage.style.display = 'none';
            }


            const chatWindow = document.getElementById('chatWindow');
            const chatBody = document.getElementById('chatBody');
            const chatInput = document.getElementById('chatInput');
            const typingIndicator = document.getElementById('typingIndicator');

            function toggleChat() {
                chatWindow.classList.toggle('show');
            }

            function sendMessage() {
                const message = chatInput.value.trim();
                if (message) {
                    appendMessage(message, 'user');
                    chatInput.value = '';
                    showTypingIndicator();

                    // Call bot function to analyze the user's message
                    setTimeout(() => {
                        botResponse(message);
                    }, 1000);
                }
            }

            function showTypingIndicator() {
                typingIndicator.style.display = 'flex';
                chatBody.scrollTop = chatBody.scrollHeight;
            }

            function hideTypingIndicator() {
                typingIndicator.style.display = 'none';
            }

            function appendMessage(message, type) {
                const messageElement = document.createElement('div');
                messageElement.className = `chat-message ${type}`;
                messageElement.innerHTML = message;

                const timestamp = document.createElement('span');
                timestamp.className = 'timestamp';
                timestamp.textContent = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                messageElement.appendChild(timestamp);

                chatBody.appendChild(messageElement);
                chatBody.scrollTop = chatBody.scrollHeight;
            }

            function handleKeyPress(event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    sendMessage();
                }
            }

            function botResponse(userMessage) {
                // Normalize the message to lowercase and remove extra spaces
                const lowerMessage = userMessage.toLowerCase().trim();

                // Common misspellings and variations
                const greetings = ['hello', 'hi', 'hey', 'hiya', 'helo', 'hullo', 'greetings', 'whats up', 'howdy', 'sup'];
                const timeGreetings = ['good morning', 'good afternoon', 'good evening', 'gm', 'ga', 'gevening', 'morning', 'afternoon', 'evening'];
                const thankYous = ['thank you', 'thanks', 'thx', 'thankyou', 'thanks a lot', 'much appreciated'];
                const farewells = ['bye', 'goodbye', 'see you', 'later', 'take care', 'peace out', 'adios', 'bye bye', 'cya'];

                const leaseTerms = ['lease captain', 'leasecaptain', 'lease captin', 'leasecp', 'lease', 'lease agreement', 'rental agreement', 'rent contract'];
                const paymentTerms = ['payment', 'pay rent', 'pay', 'lease payment', 'rent payment', 'how to pay', 'how to make payment'];
                const maintenanceTerms = ['maintenance', 'repair', 'fix', 'broken', 'issue', 'problem', 'broken item'];
                const renewalTerms = ['renew lease', 'extend lease', 'lease renewal', 'renew contract', 'lease extension'];
                const terminationTerms = ['terminate lease', 'break lease', 'end lease', 'cancel lease', 'terminate contract'];

                // Greetings (handle multiple variants and misspellings)
                if (greetings.some(greet => lowerMessage.includes(greet))) {
                    appendMessage('Hello! How can I assist you today? 😊', 'bot');
                    hideTypingIndicator();
                } else if (timeGreetings.some(timeGreet => lowerMessage.includes(timeGreet))) {
                    if (lowerMessage.includes('good morning') || lowerMessage.includes('gm') || lowerMessage.includes('morning')) {
                        appendMessage('Good morning! I hope you have a great day. How can I help you? ☀️', 'bot');
                    } else if (lowerMessage.includes('good afternoon') || lowerMessage.includes('ga') || lowerMessage.includes('afternoon')) {
                        appendMessage('Good afternoon! What can I do for you today? 🌤️', 'bot');
                    } else if (lowerMessage.includes('good evening') || lowerMessage.includes('gevening') || lowerMessage.includes('evening')) {
                        appendMessage('Good evening! How can I assist you tonight? 🌙', 'bot');
                    }
                    hideTypingIndicator();
                }

                // Handling thanks and gratitude
                else if (thankYous.some(thank => lowerMessage.includes(thank))) {
                    appendMessage('You’re welcome! 😊 Let me know if you need further assistance.', 'bot');
                    hideTypingIndicator();
                }

                // Handling farewells
                else if (farewells.some(farewell => lowerMessage.includes(farewell))) {
                    appendMessage('Goodbye! Feel free to reach out anytime. Take care! 👋', 'bot');
                    hideTypingIndicator();
                }

                // Handling queries about Lease Captain
                else if (leaseTerms.some(term => lowerMessage.includes(term))) {
                    appendMessage('The Lease Captain is a platform designed to manage lease agreements, track payments, and provide seamless communication between landlords and tenants. It ensures transparency and efficient management of rental properties.', 'bot');
                    hideTypingIndicator();
                }

                // Handling lease payment-related queries
                else if (paymentTerms.some(term => lowerMessage.includes(term))) {
                    appendMessage('Lease payments are typically made monthly, and you can pay through the online portal or by bank transfer. Need help with payments? Let me know!', 'bot');
                    hideTypingIndicator();
                }

                // Handling maintenance or repair queries
                else if (maintenanceTerms.some(term => lowerMessage.includes(term))) {
                    appendMessage('If you need a repair or maintenance request, please contact our support team directly. They will help you with any issues! 🛠️', 'bot');
                    hideTypingIndicator();
                }

                // Handling renewal or extension inquiries
                else if (renewalTerms.some(term => lowerMessage.includes(term))) {
                    appendMessage('You can initiate your lease renewal by contacting our support team or through the portal. Would you like more assistance with this?', 'bot');
                    hideTypingIndicator();
                }

                // Handling lease termination or early exit
                else if (terminationTerms.some(term => lowerMessage.includes(term))) {
                    appendMessage('If you wish to terminate your lease, please check your lease agreement for specific terms or contact support for assistance with the process.', 'bot');
                    hideTypingIndicator();
                }

                // Handling common questions about business hours
                else if (/business.*days|working.*hours|business.*hours/.test(lowerMessage)) {
                    appendMessage('Our support team is available 24/7. Feel free to ask any questions during this time!', 'bot');
                    hideTypingIndicator();
                }

                // Handling 24/7 support queries
                else if (/24\/7.*support|always.*available|support.*anytime/.test(lowerMessage)) {
                    appendMessage('Yes, we offer 24/7 support. You can reach out at any time, and we’ll be happy to assist you!', 'bot');
                    hideTypingIndicator();
                }

                // Handling lease duration or length inquiries
                else if (/lease.*duration|how.*long.*lease|lease.*term/.test(lowerMessage)) {
                    appendMessage('The lease duration can vary depending on the agreement but typically ranges from 6 months to 1 year. Please check your lease for specific details.', 'bot');
                    hideTypingIndicator();
                }

                // Handling other general queries
                else if (/how.*can.*i.*help|help.*me|what.*can.*i.*do/.test(lowerMessage)) {
                    appendMessage('I am here to assist with your lease, payment, and account inquiries! What would you like help with today?', 'bot');
                    hideTypingIndicator();
                }

                // Default response if the message is not recognized
                else {
                    appendMessage('I am sorry, I don\'t have an answer to that, visit leasecaptain.com/support. Please allow me to connect you to a support agent.', 'bot');
                    hideTypingIndicator();

                    // Simulate transitioning to support
                    setTimeout(() => {
                        appendMessage('A support agent will assist you shortly. Please be patient.', 'bot');
                        switchToSupport();
                    }, 1500);
                }
            }


