<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lease Captain | Subuser Management</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="/dist/css/adminlte.min2167.css?v=3.2.0">
    <link rel="icon" type="image/png" sizes="56x56" href="/assets/images/1.png">
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
<div class="wrapper">
    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__wobble" src="/assets/images/2.png" alt="AdminLTELogo" height="150" width="150">
    </div>

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
            <li class="nav-item">
                <a href="/logout" class="nav-link" role="button">
                    <i class="nav-icon fas fa-sign-out-alt"></i>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-light-primary elevation-4">
        <a href="/" class="brand-link">
            <img src="/assets/images/2.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <h4 class="brand-text font-weight-bold"><strong>Lease Captain</strong></h4>
        </a>
        <div class="sidebar">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">
                        <span>Welcome,</span>
                        <strong><%= currentUser.username %></strong>
                    </a>
                </div>
            </div>
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="/dashboard" class="nav-link active" style="background-color: #003366; color: #ffffff;">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-header"><strong>ACCOUNT MANAGEMENT</strong></li>
                    <li class="nav-item">
                        <a href="/subusers" class="nav-link">
                            <i class="nav-icon fas fa-users"></i>
                            <p>Subuser Accounts</p>
                        </a>
                    </li>
                    <li class="nav-item mt-auto">
                        <a href="/contacts" class="nav-link d-flex align-items-center justify-content-center" style="background-color: #003366; color: #ffffff; border-radius: 5px; margin: 10px;">
                            <i class="fas fa-headset mr-2"></i>
                            <p>Support</p>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <h3 class="text-center"><strong>Subuser Management</strong></h3>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">
                <% if (error && error.length > 0) { %>
                    <div class="alert alert-danger text-center" role="alert" style="font-size: 0.9rem;">
                        <%= error %>
                    </div>
                <% } %>
                <% if (success && success.length > 0) { %>
                    <div class="alert alert-success text-center" role="alert" style="font-size: 0.9rem;">
                        <%= success %>
                    </div>
                <% } %>

                <button type="button" class="btn btn-dark mb-3" style="background-color: #003366;" data-toggle="modal" data-target="#addSubUserModal">Add New Sub-User</button>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover text-center">
                        <thead class="thead-light">
                            <tr>
                                <th>Email</th>
                                <th>Restricted Routes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% subusers.forEach(subuser => { %>
                                <tr>
                                    <td><%= subuser.email %></td>
                                    <td>
                                        <% if (subuser.restrictedRoutes && subuser.restrictedRoutes.length > 0) { %>
                                            <ul class="list-unstyled">
                                                <% subuser.restrictedRoutes.forEach(route => { %>
                                                    <li><%= route %></li>
                                                <% }); %>
                                            </ul>
                                        <% } else { %>
                                            <span class="text-muted">No restricted routes</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Modal for Adding a New Sub-User -->
                <div class="modal fade" id="addSubUserModal" tabindex="-1" role="dialog" aria-labelledby="addSubUserModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addSubUserModalLabel">Add New Sub-User</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                            </div>
                            <div class="modal-body">
                                <form action="/subuser" method="POST">
                                    <div class="form-group">
                                        <label for="subEmail">Email</label>
                                        <input type="email" class="form-control" id="subEmail" name="email" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="subPassword">Password</label>
                                        <input type="password" class="form-control" id="subPassword" name="password" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="restrictedRoutes" class="route-label">Restricted Routes</label>
                                        <div class="select-wrapper">
                                            <div class="checkbox-wrapper">
                                                <input type="checkbox" id="restrict-payments" name="restrictedRoutes[]" value="/tenancy-manager/payments">
                                                <label for="restrict-payments" class="checkbox-label">
                                                    <span class="checkbox-custom"></span>
                                                    Payment Transactions
                                                </label>
                                            </div>
                                            <div class="checkbox-wrapper">
                                                <input type="checkbox" id="restrict-reports" name="restrictedRoutes[]" value="/reports-invoices">
                                                <label for="restrict-reports" class="checkbox-label">
                                                    <span class="checkbox-custom"></span>
                                                    Reports & Invoices
                                                </label>
                                            </div>
                                            <div class="checkbox-wrapper">
                                                <input type="checkbox" id="restrict-budget" name="restrictedRoutes[]" value="/budget-planning">
                                                <label for="restrict-budget" class="checkbox-label">
                                                    <span class="checkbox-custom"></span>
                                                    Budget Planning
                                                </label>
                                            </div>
                                            <div class="checkbox-wrapper">
                                                <input type="checkbox" id="restrict-users" name="restrictedRoutes[]" value="/subusers">
                                                <label for="restrict-users" class="checkbox-label">
                                                    <span class="checkbox-custom"></span>
                                                    Subuser Accounts
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-dark" style="background-color: #003366;">Add Sub-User</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="main-footer">
        <strong>Copyright Â© 2024-2025 <a href="https://leasecaptain.com/">Lease Captain</a></strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block"><b>Version</b> 1.0.2</div>
    </footer>
</div>

<!-- Styles -->
<style>
    .form-group { margin-bottom: 1rem; text-align: center; }
    .route-label { font-weight: bold; font-size: 1.1rem; color: #003366; margin-bottom: 8px; }
    .select-wrapper { display: flex; flex-direction: column; gap: 10px; align-items: center; margin-top: 8px; padding: 8px; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1); max-width: 350px; margin: 0 auto; }
    .checkbox-wrapper { position: relative; display: flex; align-items: center; padding: 8px 12px; border: 1px solid #ccc; border-radius: 15px; transition: border-color 0.3s, background-color 0.3s, box-shadow 0.3s; width: 100%; justify-content: flex-start; background-color: #fff; }
    .checkbox-wrapper:hover { border-color: #003366; background-color: #f0f8ff; box-shadow: 0 0 5px rgba(0, 51, 102, 0.2); }
    .checkbox-wrapper input[type="checkbox"] { opacity: 0; position: absolute; left: 0; top: 0; width: 100%; height: 100%; cursor: pointer; z-index: 1; }
    .checkbox-custom { width: 16px; height: 16px; border: 1px solid #003366; border-radius: 50%; margin-right: 10px; transition: background-color 0.3s, border-color 0.3s; }
    .checkbox-label { font-size: 0.9rem; color: #333; cursor: pointer; display: flex; align-items: center; }
    .checkbox-wrapper input[type="checkbox"]:checked + .checkbox-label .checkbox-custom { background-color: #003366; border-color: #003366; }
    @media (max-width: 768px) { .checkbox-wrapper { padding: 6px; font-size: 0.85rem; } .checkbox-custom { width: 14px; height: 14px; } }
    @media (max-width: 576px) {
        .alert { font-size: 0.8rem; }
        .modal-dialog { margin: 1rem; width: 90%; }
        .table { font-size: 0.7rem; }
        .btn { margin-bottom: 0.5rem; font-size: 0.7rem; }
        .modal-content { padding: 0.3rem; }
        .modal-title { font-size: 0.9rem; }
        .modal-body { font-size: 0.8rem; }
    }
</style>

<!-- Scripts -->
<script src="/plugins/jquery/jquery.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
<script src="/dist/js/adminlte2167.js?v=3.2.0"></script>
</body>
</html>