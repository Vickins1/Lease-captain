        .container {
            padding: 15px;
            padding-top: 40px;
        }

        .sidebar {
            background-color: #ffffff;
            color: #333333;
            height: 100vh;
            padding: 20px 3px;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            overflow-y: auto;
            transition: all 0.3s ease;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

        .sidebar {
            background-color: #ffffff;
            color: #333333;
            height: 100vh;
            padding: 20px 10px;
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            overflow-y: auto;
            transition: transform 0.3s ease, width 0.3s ease;
            /* Smooth sidebar transition */
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

        /* Sidebar Title Styling */
        .sidebar-title {
            margin-bottom: 30px;
            color: #000000;
            font-size: 1.5em;
            text-align: center;
            font-weight: bold;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 10px;
        }

        .sidebar .nav-link {
            color: #333333;
            padding: 12px 20px;
            margin: 8px 0;
            text-decoration: none;
            font-size: 0.9em;
            font-weight: bold;
            display: flex;
            align-items: center;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
        }

        .sidebar .nav-link i {
            margin-right: 20px;
            color: #555555;
            transition: color 0.3s ease;
        }

        /* Hover Effects */
        .sidebar .nav-link:hover {
            background-color: #f1f1f1;
            color: #003366;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(-1px);
        }

        .sidebar .nav-link:hover i {
            color: #003366;
        }

        /* Active Link Styling */
        .sidebar .nav-link.active {
            background-color: #003366;
            color: #ffffff;
            font-weight: bold;
        }

        .sidebar .nav-link.active i {
            color: #ffffff;
        }

        /* Smooth Collapsible Submenu */
        .collapse {
            transition: max-height 0.3s ease, opacity 0.3s ease;
            max-height: 0;
            opacity: 0;
            overflow: hidden;
        }

        .collapse.show {
            max-height: 500px;
            opacity: 1;
        }

        @media (max-width: 968px) {
            .sidebar {
                transform: translateX(-250px);
            }

            .sidebar.active {
                transform: translateX(0);
            }
        }


        /* Header Styling */
        .header {
            background-color: #ffffff;
            color: #000000;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: calc(100% - 250px);
            top: 0;
            left: 260px;
            z-index: 1001;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: left 0.3s ease, width 0.3s ease;
        }

        .header-right {
            margin-left: auto;
            display: flex;
            align-items: center;
        }

        .header .btn {
            background-color: #ffffff;
            border: none;
            font-size: 1rem;
            color: #000;
            padding: 0.5rem 1rem;
        }

        /* Footer */
        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #ffffff;
            color: #000000;
            text-align: center;
            padding: 10px 0;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Content Area */
        .content {
            padding: 20px;
            margin-left: 250px;
            margin-top: 70px;
        }

        /* Responsive Adjustments */
        @media (max-width: 968px) {
            .sidebar {
                transform: translateX(-250px);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .header {
                width: 100%;
                left: 0;
            }

            .content {
                margin-left: 0;
            }
        }
    </style>

</head>

