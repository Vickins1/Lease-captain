           <thead>
               <tr>
                   <th>Role Name</th>
               </tr>
           </thead>
           <tbody>
               <% if (roles && roles.length > 0) { %>
                   <% roles.forEach(role => { %>
                       <tr id="role-<%= role._id %>">
                           <td><%= role.name %></td>
                       </tr>
                   <% }); %>
               <% } else { %>
                   <tr>
                       <td colspan="3" class="text-center">No roles found.</td>
                   </tr>
               <% } %>
           </tbody>
       </table>
