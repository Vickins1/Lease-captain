                transform: translateX(-250px);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .mobile-sidebar-btn {
                display: block;
                color: white;
            }

            .sidebar a {
                font-size: 0.8em;
            }
        }


        @media (min-width: 768px) and (max-width: 968px) {
            .mobile-sidebar-btn {
