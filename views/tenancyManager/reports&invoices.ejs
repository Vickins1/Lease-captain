<!-- JavaScript for Filtering -->
<script>
    document.getElementById('filterInvoices').addEventListener('click', function(e) {
        e.preventDefault(); // Prevent any default form submission behavior

        // Get filter values
        const dateFrom = document.getElementById('invoiceDateFrom').value;
        const dateTo = document.getElementById('invoiceDateTo').value;
        const status = document.getElementById('invoiceStatus').value;

        // Convert filter dates to Date objects (if provided)
        const fromDate = dateFrom ? new Date(dateFrom) : null;
        const toDate = dateTo ? new Date(dateTo) : null;

        // Get all invoice rows
        const rows = document.querySelectorAll('#invoicesTable tbody tr');

        rows.forEach(row => {
            const dueDateStr = row.getAttribute('data-due-date'); // ISO string from data attribute
            const rowStatus = row.getAttribute('data-status');
            const dueDate = new Date(dueDateStr);

            // Filter conditions
            let showRow = true;

            // Date range filter
            if (fromDate && dueDate < fromDate) {
                showRow = false;
            }
            if (toDate && dueDate > toDate) {
                showRow = false;
            }

            // Status filter
            if (status !== 'all' && rowStatus !== status) {
                showRow = false;
            }

            // Show or hide the row
            row.style.display = showRow ? '' : 'none';
        });
    });
</script>

