                    footer {
                        font-size: 0.7rem; 
                    }
                
                    @media (max-width: 768px) {
                        footer {
                            font-size: 0.6rem; 
                            padding: 5px;
                        }
                    }
                
                    @media (max-width: 576px) {
                        footer {
                            font-size: 0.5rem;
                            padding: 2px; 
                        }
                    }
                </style>
                
        
        
        
        
                <!-- Bootstrap JS -->
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
