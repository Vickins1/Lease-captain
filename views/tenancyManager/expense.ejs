<script>
    document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('searchInput');
        const searchForm = document.getElementById('searchForm');
        let debounceTimer;

        function filterExpenses(searchTerm) {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                const rows = document.querySelectorAll('#expensesTable tbody tr');
                const term = searchTerm.trim().toLowerCase();

                rows.forEach(row => {
                    const expenseName = row.children[2].textContent.toLowerCase();
                    const category = row.children[3].textContent.toLowerCase();
                    const shouldShow = expenseName.includes(term) || category.includes(term);
                    row.style.display = shouldShow ? '' : 'none';
                });

                // Update row numbers
                const visibleRows = Array.from(rows).filter(row => row.style.display !== 'none');
                visibleRows.forEach((row, index) => {
                    row.children[0].textContent = index + 1;
                });
            }, 300);
        }

        if (searchInput) {
            searchInput.addEventListener('input', (e) => filterExpenses(e.target.value));
            const urlParams = new URLSearchParams(window.location.search);
            const searchTerm = urlParams.get('search');
            if (searchTerm) {
                searchInput.value = searchTerm;
                filterExpenses(searchTerm);
            }
        }

        const expenseForm = document.getElementById('createExpenseForm');
        if (expenseForm) {
            expenseForm.addEventListener('submit', (e) => {
                const amount = document.getElementById('amount');
                if (amount.value < 0) {
                    e.preventDefault();
                    alert('Amount cannot be negative');
                }
            });
        }

        $('#createExpenseModal').on('hidden.bs.modal', function () {
            document.getElementById('createExpenseForm').reset();
        });
    });
</script>

