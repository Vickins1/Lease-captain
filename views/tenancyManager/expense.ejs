<!-- Content Wrapper -->
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid mt-4">
            <!-- Messages -->
            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger animate__animated animate__fadeIn text-center">
                    <i class="fas fa-exclamation-circle mr-2"></i> <%= error %>
                </div>
            <% } %>
            <% if (success && success.length > 0) { %>
                <div class="alert alert-success animate__animated animate__fadeIn text-center">
                    <i class="fas fa-check-circle mr-2"></i> <%= success %>
                </div>
            <% } %>

            <div class="card custom-card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-money-bill-wave mr-2"></i> Expenses</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
                        <!-- Search Form -->
                        <form id="searchForm" action="/expenses" method="GET" class="form-inline mb-2 mb-md-0">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                </div>
                                <input type="text" id="searchInput" name="search" class="form-control custom-input" 
                                       placeholder="Search by name or category" value="<%= search || '' %>">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-search mr-1"></i> Search</button>
                                </div>
                            </div>
                        </form>
                        <!-- Add Expense Button -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createExpenseModal">
                            <i class="fas fa-plus mr-2"></i> Add Expense
                        </button>
                    </div>

                    <!-- Expenses Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover custom-table" id="expensesTable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Expense ID</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Method</th>
                                    <th>Receipt</th>
                                    <th>Tags</th>
                                    <th>Notes</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (expenses && expenses.length > 0) { %>
                                    <% expenses.forEach((expense, index) => { %>
                                        <tr data-expense-id="<%= expense.id || index %>">
                                            <td><%= (currentPage - 1) * pageSize + index + 1 %></td>
                                            <td><%= expense.expenseId || 'N/A' %></td>
                                            <td><%= expense.name || 'N/A' %></td>
                                            <td><%= expense.category || 'N/A' %></td>
                                            <td>Ksh.<%= Number(expense.amount || 0).toFixed(2) %></td>
                                            <td><%= expense.date ? new Date(expense.date).toLocaleDateString('en-GB', { day: '2-digit', month: '2-digit', year: 'numeric' }) : 'N/A' %></td>
                                            <td>
                                                <span class="badge <%= expense.status === 'Pending' ? 'badge-warning' : 
                                                                      expense.status === 'Approved' ? 'badge-success' : 'badge-danger' %>">
                                                    <%= expense.status || 'N/A' %>
                                                </span>
                                            </td>
                                            <td><%= expense.paymentMethod || 'N/A' %></td>
                                            <td>
                                                <% if (expense.receipt) { %>
                                                    <a href="<%= expense.receipt %>" target="_blank" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                            <td><%= expense.tags && expense.tags.length > 0 ? expense.tags.join(', ') : 'N/A' %></td>
                                            <td><%= expense.notes || 'N/A' %></td>
                                            <td>
                                                <form action="/expenses/delete/<%= expense._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this expense?');">
                                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr><td colspan="12" class="text-center text-muted">No expenses found</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <% if (totalPages > 0) { %>
                        <nav aria-label="Expenses page navigation" class="mt-4">
                            <ul class="pagination justify-content-center custom-pagination">
                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="<%= currentPage > 1 ? `/expenses?page=${currentPage - 1}&search=${encodeURIComponent(search || '')}` : '#' %>" aria-label="Previous">
                                        <i class="fas fa-arrow-left"></i>
                                    </a>
                                </li>
                                <% 
                                    const maxPagesToShow = 5;
                                    let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
                                    let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                                    if (endPage - startPage + 1 < maxPagesToShow) {
                                        startPage = Math.max(1, endPage - maxPagesToShow + 1);
                                    }
                                %>
                                <% if (startPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/expenses?page=1&search=<%= encodeURIComponent(search || '') %>">1</a>
                                    </li>
                                    <% if (startPage > 2) { %>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    <% } %>
                                <% } %>
                                <% for (let i = startPage; i <= endPage; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/expenses?page=<%= i %>&search=<%= encodeURIComponent(search || '') %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <% if (endPage < totalPages) { %>
                                    <% if (endPage < totalPages - 1) { %>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    <% } %>
                                    <li class="page-item">
                                        <a class="page-link" href="/expenses?page=<%= totalPages %>&search=<%= encodeURIComponent(search || '') %>"><%= totalPages %></a>
                                    </li>
                                <% } %>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="<%= currentPage < totalPages ? `/expenses?page=${currentPage + 1}&search=${encodeURIComponent(search || '')}` : '#' %>" aria-label="Next">
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    <% } else if (expenses.length === 0) { %>
                        <p class="text-center text-muted mt-3">No expenses found for the current search.</p>
                    <% } %>

                    <!-- Total Expenses -->
                    <div class="card modern-card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-calculator mr-2"></i> Total Expenses</h5>
                        </div>
                        <div class="card-body">
                            <h4 class="lead"><strong>Ksh. <%= totalExpensesAmount.toFixed(2) %></strong></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Create Expense Modal -->
    <div class="modal fade" id="createExpenseModal" tabindex="-1" aria-labelledby="createExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content custom-modal">
                <div class="modal-header">
                    <h5 class="modal-title" id="createExpenseModalLabel"><i class="fas fa-plus-circle mr-2"></i> Create New Expense</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <form action="/expenses" method="POST" id="createExpenseForm" enctype="multipart/form-data">
                    <div class="modal-body modern-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="expenseName">Expense Name</label>
                                    <input type="text" class="form-control custom-input" id="expenseName" name="name" required>
                                </div>
                                <div class="form-group">
                                    <label for="category">Category</label>
                                    <input type="text" class="form-control custom-input" id="category" name="category" required>
                                </div>
                                <div class="form-group">
                                    <label for="amount">Amount (Ksh)</label>
                                    <input type="number" class="form-control custom-input" id="amount" name="amount" min="0" step="0.01" required>
                                </div>
                                <div class="form-group">
                                    <label for="date">Date</label>
                                    <input type="date" class="form-control custom-input" id="date" name="date" required max="<%= new Date().toISOString().split('T')[0] %>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="status">Status</label>
                                    <select class="form-control custom-select" id="status" name="status" required>
                                        <option value="Pending">Pending</option>
                                        <option value="Approved">Approved</option>
                                        <option value="Rejected">Rejected</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="paymentMethod">Payment Method</label>
                                    <select class="form-control custom-select" id="paymentMethod" name="paymentMethod" required>
                                        <option value="Cash">Cash</option>
                                        <option value="Credit Card">Credit Card</option>
                                        <option value="Debit Card">Debit Card</option>
                                        <option value="Mobile Payment">Mobile Payment</option>
                                        <option value="Bank Transfer">Bank Transfer</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="receipt">Receipt (Optional)</label>
                                    <input type="file" class="form-control custom-input" id="receipt" name="receipt" accept="image/*,application/pdf">
                                </div>
                                <div class="form-group">
                                    <label for="tags">Tags (comma-separated)</label>
                                    <input type="text" class="form-control custom-input" id="tags" name="tags" placeholder="e.g., Business, Travel">
                                </div>
                                <div class="form-group">
                                    <label for="notes">Notes</label>
                                    <textarea class="form-control custom-input" id="notes" name="notes" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-2"></i> Create Expense</button>
