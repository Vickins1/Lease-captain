<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lease Captain - Sign-in</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <link rel="icon" href="/images/icon.png" type="image/png">
  <style>
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 20px 10px;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .login-container {
      background: #fff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      border-top: 5px solid #003366;
      transition: transform 0.3s ease;
      overflow: hidden;
    }

    .login-container:hover {
      transform: scale(1.02);
    }

    h2 {
      color: #003366;
      text-align: center;
      margin-bottom: 25px;
      font-size: 20px;
      font-weight: 700;
      letter-spacing: 1px;
      word-wrap: break-word;
    }

    .form-label {
      font-weight: 600;
      color: #003366;
      margin-bottom: 5px;
      font-size: 0.9rem;
      display: block;
    }

    .form-group {
      margin-bottom: 20px;
      width: 100%;
    }

    input[type="password"],
    input[type="text"],
    input[type="email"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
      font-size: 0.9rem;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    input[type="password"]:focus,
    input[type="text"]:focus,
    input[type="email"]:focus {
      outline: none;
      border-color: #003366;
      box-shadow: 0 0 5px rgba(0, 51, 102, 0.3);
    }

    .btn-submit {
      background: linear-gradient(90deg, #003366, #0066cc);
      color: white;
      border: none;
      padding: 12px;
      width: 100%;
      border-radius: 25px;
      font-weight: 600;
      cursor: pointer;
      text-align: center;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .btn-submit:hover {
      background: linear-gradient(90deg, #005bb5, #0088ff);
      transform: translateY(-2px);
    }

    .btn-submit:disabled {
      background: #6c757d;
      cursor: not-allowed;
      transform: none;
    }

    .social-login {
      text-align: center;
      margin-top: 20px;
    }

    .social-login p {
      font-size: 0.9rem;
      color: #666;
      margin-bottom: 10px;
    }

    .social-login .btn {
      width: 100%;
      max-width: 200px;
      margin: 5px auto;
      font-size: 0.9rem;
      display: block;
      border-radius: 25px;
    }

    .forgot-password {
      text-align: right;
      margin-top: 10px;
    }

    .forgot-password a {
      color: #003366;
      text-decoration: none;
      font-size: 0.9rem;
      font-weight: 600;
    }

    .forgot-password a:hover {
      text-decoration: underline;
    }

    .sign-up-link {
      text-align: center;
      margin-top: 15px;
      font-size: 0.9rem;
    }

    .sign-up-link a {
      color: #003366;
      font-weight: 600;
      text-decoration: none;
    }

    .sign-up-link a:hover {
      text-decoration: underline;
    }

    .logo {
      text-align: center;
      margin-bottom: 20px;
    }

    .logo img {
      max-width: 200px;
      width: 100%;
      transition: transform 0.3s ease;
    }

    .logo img:hover {
      transform: scale(1.05);
    }

    .alert {
      font-size: 0.8rem;
      margin-bottom: 20px;
      padding: 10px;
      border-radius: 5px;
      word-wrap: break-word;
    }

    /* Password Toggle */
    .password-wrapper {
      position: relative;
    }

    .password-wrapper .toggle-password {
      position: absolute;
      right: 10px;
      top: 75%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #666;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .login-container {
        padding: 20px;
        max-width: 400px;
      }

      h2 {
        font-size: 20px;
      }

      .logo img {
        max-width: 150px;
      }

      .form-group {
        margin-bottom: 15px;
      }

      .btn-submit {
        padding: 10px;
      }
    }

    @media (max-width: 576px) {
      body {
        padding: 15px 5px;
      }

      .login-container {
        padding: 15px;
        max-width: 100%;
        margin: 0 10px;
      }

      h2 {
        font-size: 18px;
      }

      .form-group {
        margin-bottom: 12px;
      }

      .btn-submit {
        font-size: 0.8rem;
        padding: 8px;
      }

      .logo img {
        max-width: 120px;
      }

      input[type="password"],
      input[type="text"],
      input[type="email"] {
        font-size: 0.85rem;
        padding: 8px;
      }

      .form-label {
        font-size: 0.85rem;
      }
    }

    @media (max-width: 400px) {
      .login-container {
        padding: 10px;
      }

      h2 {
        font-size: 16px;
      }

      .logo img {
        max-width: 100px;
      }
    }

    /* Professional Loader */
    .spinner {
      width: 50px;
      height: 50px;
      border: 5px solid #e0e0e0;
      border-top: 5px solid #003366;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Loader Modal Styling */
    #loaderModal .modal-content {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      overflow: hidden;
    }

    #loaderModal .modal-header {
      background: linear-gradient(90deg, #003366, #0066cc);
      border-bottom: none;
      padding: 15px;
    }

    #loaderModal .modal-title {
      color: #ffffff;
      font-weight: 700;
      font-size: 1.2rem;
      text-align: center;
      width: 100%;
    }

    #loaderModal .modal-body {
      padding: 30px;
      background-color: #ffffff;
      text-align: center;
    }

    #loaderModal h5 {
      color: #003366;
      font-weight: 600;
      font-size: 1.1rem;
      margin-top: 10px;
    }

    #loaderModal p {
      color: #555;
      font-size: 0.9rem;
      margin-top: 5px;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="logo"><a href="/"><img src="/images/logo2.png" alt="Lease Captain Logo"></a></div>
    <h2><i class="fas fa-sign-in-alt mr-2"></i> <strong>Sign-in to Lease Captain</strong></h2>

    <!-- Login Form -->
    <form id="loginForm" action="/login" method="POST">
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger text-center" role="alert">
          <%= error %>
        </div>
      <% } %>
      <% if (success && success.length > 0) { %>
        <div class="alert alert-success text-center" role="alert">
          <%= success %>
        </div>
      <% } %>

      <div class="form-group">
        <label for="email" class="form-label"><i class="fas fa-envelope mr-1"></i> Email</label>
        <input type="email" name="email" id="email" placeholder="e.g., john@example.com" required>
      </div>

      <div class="form-group password-wrapper">
        <label for="password" class="form-label"><i class="fas fa-lock mr-1"></i> Password</label>
        <input type="password" name="password" id="password" placeholder="Enter your password" required>
        <span class="toggle-password" id="togglePassword"><i class="fas fa-eye"></i></span>
      </div>

      <button type="submit" class="btn-submit" id="loginButton">
        <i class="fas fa-sign-in-alt mr-2"></i> Sign In
      </button>

      <div class="social-login">
        <p>Or sign-in with:</p>
        <a href="/auth/google" class="btn btn-outline-danger"><i class="fab fa-google mr-2"></i> Google</a>
        <a href="/auth/facebook" class="btn btn-outline-primary"><i class="fab fa-facebook mr-2"></i> Facebook</a>
      </div>

      <div class="forgot-password">
        <a href="#" data-toggle="modal" data-target="#forgotPasswordModal">Forgot Password?</a>
      </div>

      <div class="sign-up-link">
        <p>Don't have an account? <a href="/signup"><i class="fas fa-user-plus mr-1"></i> <strong>Sign Up</strong></a></p>
      </div>
    </form>
  </div>

  <!-- Loader Modal -->
  <div class="modal" id="loaderModal" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Processing</h5>
        </div>
        <div class="modal-body">
          <div class="spinner"></div>
          <h5>Logging In...</h5>
          <p>Please wait while we verify your credentials.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Forgot Password Modal -->
  <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header" style="background-color: #003366; color: #fff;">
          <h5 class="modal-title">Reset Password</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #fff;">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/forgot-password" method="POST">
            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" name="email" id="email" placeholder="Enter your email" required>
            </div>
            <button type="submit" class="btn-submit">Request Reset Link</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    const passwordField = document.getElementById('password');
    const togglePassword = document.getElementById('togglePassword');

    togglePassword.addEventListener('click', () => {
      const type = passwordField.type === 'password' ? 'text' : 'password';
      passwordField.type = type;
      togglePassword.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
    });

    const loginForm = document.getElementById('loginForm');
    const loginButton = document.getElementById('loginButton');

    loginForm.addEventListener('submit', (e) => {
      e.preventDefault();
      loginButton.disabled = true;
      loginButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Processing...';
      $('#loaderModal').modal('show');
      setTimeout(() => loginForm.submit(), 500); // Delay for visual feedback
    });
  </script>
</body>
</html>