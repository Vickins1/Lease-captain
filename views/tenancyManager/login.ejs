<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lease Captain Login</title>
  <!-- Bootstrap CSS CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <link rel="icon" href="/images/icon.png" type="image/png">

  <style>
    body {
      background-color: #f4f4f4;
      font-family: 'Arial', sans-serif; 
    }
    .container {
      margin-top: 10%;
      margin-bottom: 10%;
      max-width: 500px;
      padding: 30px;
      background-color: #ffffff; 
      border-radius: 10px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); 
    }
    h1 {
      font-weight: bold; 
      color: #003366;
      font-size: 30px;
    }
    .form-group label {
      font-weight: 600; 
    }
    .error-message {
      color: red; 
      background-color: #f8d7da; 
      border: 1px solid #f5c6cb; 
      border-radius: 5px; 
      margin-bottom: 15px; 
    }
    .btn-primary {
      background-color: #003366; 
      border: none;
    }
    .btn-primary:hover {
      background-color: #003366; 
    }
    .text-center a {
      color: #003366;
    }
    .text-center a:hover {
      text-decoration: underline; 
    }

    /* Responsive adjustments */
    @media (max-width: 576px) {
      .container {
        margin-top: 20%; 
        padding: 20px;
        width: 90%;
      }
      h1 {
        font-size: 1.5rem; 
      }
      .form-group label, .text-center, .btn-primary, .form-control, .btn {
        font-size: 0.8rem;
      }
      .error-message {
        font-size: 0.8rem; 
        padding: 5px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Login to Lease Captain</h1>
  
    <!-- Error Message -->
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger text-center" role="alert">
          <%= error %>
      </div>
    <% } %>

    <!-- Success Message -->
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success text-center" role="alert">
          <%= success %>
      </div>
    <% } %>
  
    <form id="loginForm" action="/login" method="POST" onsubmit="showLoaderModal(event)">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="Enter your username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required>
        <input type="checkbox" id="showPassword"> <label for="showPassword">Show Password</label>
      </div>
      <button type="submit" class="btn btn-dark btn-block" style="background-color: #003366;">
        Login
      </button>
    </form>
    <p class="text-right"> <a href="#" data-toggle="modal" data-target="#forgotPasswordModal">Forget Password?</a></p>
    <div class="text-center mt-4">
      <a href="/auth/google" class="btn btn-outline-danger btn-lg d-flex align-items-center justify-content-center px-4 py-2 rounded-pill w-100" style="max-width: 300px; margin: auto;">
        <i class="fab fa-google mr-2"></i> Sign in with Google
      </a>
    </div>
    <p class="text-center">Don't have an account? <a href="/signup">Sign Up</a></p>
  </div>

<!-- Loader Modal -->
<div class="modal" id="loaderModal" tabindex="-1" aria-hidden="true" style="display: none;">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" style="border: none; border-radius: 12px; overflow: hidden;">
          <div class="modal-header" style="background-color: #003366;">
              <h5 class="modal-title" style="color: #ffffff; font-weight: 600; margin: 0 auto;">Processing</h5>
          </div>
          <div class="modal-body text-center" style="padding: 2rem; background-color: #ffffff;">
              <div class="dot-loader">
                  <div></div><div></div><div></div>
              </div>
              <h5 class="mt-3" style="color: #003366; font-weight: 600; font-size: 1.1rem;">Logging In...</h5>
              <p style="color: #777; font-size: 0.9rem;">Please hold on while we verify your credentials.</p>
          </div>
      </div>
  </div>
</div>

<!-- CSS for Dot Loader Animation -->
<style>
  .dot-loader {
      display: flex;
      justify-content: center;
      gap: 0.3rem;
      margin-bottom: 20px;
  }
  
  .dot-loader div {
      width: 12px;
      height: 12px;
      background-color: #003366;
      border-radius: 50%;
      animation: pulse 0.6s ease-in-out infinite;
  }

  .dot-loader div:nth-child(1) { animation-delay: 0s; }
  .dot-loader div:nth-child(2) { animation-delay: 0.2s; }
  .dot-loader div:nth-child(3) { animation-delay: 0.4s; }

  @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.5); opacity: 0.5; }
  }
</style>


  <!-- Forget Password Modal -->
  <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="forgotPasswordModalLabel">Reset Password</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/forgot-password" method="POST">
            <div class="form-group">
              <label for="email">Enter your email address</label>
              <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    // Show/Hide password functionality
    document.getElementById('showPassword').addEventListener('change', function() {
      const passwordField = document.getElementById('password');
      passwordField.type = this.checked ? 'text' : 'password';
    });

    function showLoaderModal(event) {
    event.preventDefault();
    
    $('#loaderModal').modal('show');
    
    setTimeout(() => {
        document.getElementById("loginForm").submit();
        
        setTimeout(() => {
            $('#loaderModal').modal('hide');
        }, 1000); 
    }, 500);
}

  </script>
</body>
</html>
