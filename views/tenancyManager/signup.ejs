<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - Lease Captain | Property Management Made Easy</title>

  <!-- Meta Tags -->
  <meta name="description" content="Create your Lease Captain account and start managing your properties with ease and security. Sign up in seconds!">
  <meta name="author" content="Lease Captain Team">
  <meta name="robots" content="index, follow">

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="Sign Up - Lease Captain">
  <meta property="og:description" content="Join Lease Captain to manage, lease, and rent your properties in Kenya securely and efficiently.">
  <meta property="og:url" content="https://leasecaptain.com/signup">
  <meta property="og:image" content="https://leasecaptain.com/images/banner1.jpeg">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="Sign Up - Lease Captain">
  <meta name="twitter:description" content="Create your account with Lease Captain and take control of your property management.">
  <meta name="twitter:image" content="https://leasecaptain.com/images/banner1.jpeg">

  <!-- Canonical URL -->
  <link rel="canonical" href="https://leasecaptain.com/signup">

  <!-- Favicon -->
  <link rel="icon" href="/images/icon.png" type="image/png">

  <!-- Bootstrap & Font Awesome -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

  <style>
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 10px 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .signup-container {
      background: #fff;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      border-top: 5px solid #003366;
      transition: transform 0.3s ease;
      overflow: hidden;
    }

    .signup-container:hover {
      transform: scale(1.02);
    }

    h1 {
      color: #003366;
      text-align: center;
      margin-bottom: 25px;
      font-size: 20px;
      font-weight: 700;
      letter-spacing: 1px;
      word-wrap: break-word;
    }

    .form-label {
      font-weight: 600;
      color: #003366;
      margin-bottom: 5px;
      font-size: 0.9rem;
      display: block;
    }

    .form-group {
      margin-bottom: 20px;
      width: 100%;
    }

    input[type="password"],
    input[type="text"],
    input[type="email"],
    input[type="tel"],
    select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
      font-size: 0.9rem;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    input[type="password"]:focus,
    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="tel"]:focus,
    select:focus {
      outline: none;
      border-color: #003366;
      box-shadow: 0 0 5px rgba(0, 51, 102, 0.3);
    }

    .btn-submit {
      background: linear-gradient(90deg, #003366, #0066cc);
      color: white;
      border: none;
      padding: 12px;
      width: 100%;
      border-radius: 25px;
      font-weight: 600;
      cursor: pointer;
      text-align: center;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .btn-submit:hover {
      background: linear-gradient(90deg, #005bb5, #0088ff);
      transform: translateY(-2px);
    }

    .btn-submit:disabled {
      background: #6c757d;
      cursor: not-allowed;
      transform: none;
    }

    .sign-up-link {
      text-align: center;
      margin-top: 15px;
      font-size: 0.9rem;
    }

    .sign-up-link a {
      color: #003366;
      font-weight: 600;
      text-decoration: none;
    }

    .sign-up-link a:hover {
      text-decoration: underline;
    }

    .logo {
      text-align: center;
      margin-bottom: 20px;
    }

    .logo img {
      max-width: 200px;
      width: 100%;
      transition: transform 0.3s ease;
    }

    .logo img:hover {
      transform: scale(1.05);
    }

    .alert {
      font-size: 0.8rem;
      margin-bottom: 20px;
      padding: 10px;
      border-radius: 5px;
      word-wrap: break-word;
    }

    small.error {
      color: #dc3545;
      display: block;
      margin-top: 5px;
      font-size: 0.75rem;
      word-wrap: break-word;
    }

    /* Honeypot field styling */
    .honeypot-field {
      display: none;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .signup-container {
        padding: 20px;
        max-width: 400px;
      }

      h1 {
        font-size: 20px;
      }

      .logo img {
        max-width: 150px;
      }

      .form-group {
        margin-bottom: 15px;
      }

      .btn-submit {
        padding: 10px;
      }
    }

    @media (max-width: 576px) {
      body {
        padding: 15px 5px;
      }

      .signup-container {
        padding: 15px;
        max-width: 100%;
        margin: 0 10px;
      }

      h1 {
        font-size: 18px;
      }

      .form-group {
        margin-bottom: 12px;
      }

      .btn-submit {
        font-size: 0.8rem;
        padding: 8px;
      }

      .logo img {
        max-width: 120px;
      }

      input[type="password"],
      input[type="text"],
      input[type="email"],
      input[type="tel"],
      select {
        font-size: 0.85rem;
        padding: 8px;
      }

      .form-label {
        font-size: 0.85rem;
      }
    }

    @media (max-width: 400px) {
      .signup-container {
        padding: 10px;
      }

      h1 {
        font-size: 16px;
      }

      .logo img {
        max-width: 100px;
      }
    }
  </style>
</head>

<body>
  <div class="signup-container">
    <div class="logo"><a href="/"><img src="/images/logo2.png" alt="Lease Captain Logo"></a></div>
    <h1><i class="fas fa-user-plus mr-2"></i> <strong>Create Your Account</strong></h1>

    <!-- Error Message -->
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>

    <!-- Success Message -->
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <%= success %>
      </div>
    <% } %>

    <form id="signupForm" action="/signup" method="POST" novalidate>
      <div class="form-group">
        <label for="username" class="form-label"><i class="fas fa-user mr-1"></i> Username</label>
        <input type="text" name="username" id="username" placeholder="e.g., John123"
          value="<%= typeof username !== 'undefined' ? username : '' %>" pattern="^[a-zA-Z0-9_]{3,20}$"
          title="Username must be 3-20 characters and contain only letters, numbers, or underscores" required>
        <small class="error" id="usernameError"></small>
      </div>

      <div class="form-group">
        <label for="email" class="form-label"><i class="fas fa-envelope mr-1"></i> Email</label>
        <input type="email" name="email" id="email" placeholder="e.g., example@domain.com"
          value="<%= typeof email !== 'undefined' ? email : '' %>" pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$"
          title="Enter a valid email address" required>
        <small class="error" id="emailError"></small>
      </div>

      <div class="form-group">
        <label for="phone" class="form-label"><i class="fas fa-phone mr-1"></i> Phone Number</label>
        <input type="tel" name="phone" id="phone" placeholder="e.g., +254768123456"
          value="<%= typeof phone !== 'undefined' ? phone : '' %>" pattern="^\+?[1-9]\d{1,14}$"
          title="Enter a valid phone number (e.g., +254768123456)" required>
        <small class="error" id="phoneError"></small>
      </div>

      <div class="form-group">
        <label for="password" class="form-label"><i class="fas fa-lock mr-1"></i> Password</label>
        <input type="password" name="password" id="password" placeholder="Create your password"
          pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{8,}"
          title="Password must be at least 8 characters and include an uppercase letter, lowercase letter, number, and special character"
          required>
        <small class="error" id="passwordError"></small>
      </div>

      <div class="form-group">
        <label for="confirm-password" class="form-label"><i class="fas fa-lock mr-1"></i> Confirm Password</label>
        <input type="password" name="confirm-password" id="confirm-password" placeholder="Confirm password" required>
        <small class="error" id="confirmPasswordError"></small>
      </div>

      <div class="form-group">
        <label for="plan" class="form-label"><i class="fas fa-layer-group mr-1"></i> Select Your Plan</label>
        <select name="plan" id="plan" required>
          <option value="Basic" <%= typeof plan !== 'undefined' && plan === 'Basic' ? 'selected' : '' %>>Demo (5 Units) - Free</option>
          <option value="Standard-Monthly" <%= typeof plan !== 'undefined' && plan === 'Standard-Monthly' ? 'selected' : '' %>>Standard (Up to 20 Units) - Ksh. 1,499/month</option>
          <option value="Standard-Yearly" <%= typeof plan !== 'undefined' && plan === 'Standard-Yearly' ? 'selected' : '' %>>Standard (Up to 20 Units) - Ksh. 14,390/year (Save 20%)</option>
          <option value="Pro-Monthly" <%= typeof plan !== 'undefined' && plan === 'Pro-Monthly' ? 'selected' : '' %>>Pro (Up to 50 Units) - Ksh. 2,999/month</option>
          <option value="Pro-Yearly" <%= typeof plan !== 'undefined' && plan === 'Pro-Yearly' ? 'selected' : '' %>>Pro (Up to 50 Units) - Ksh. 28,790/year (Save 20%)</option>
          <option value="Advanced-Monthly" <%= typeof plan !== 'undefined' && plan === 'Advanced-Monthly' ? 'selected' : '' %>>Advanced (Up to 100 Units) - Ksh. 4,499/month</option>
          <option value="Advanced-Yearly" <%= typeof plan !== 'undefined' && plan === 'Advanced-Yearly' ? 'selected' : '' %>>Advanced (Up to 100 Units) - Ksh. 43,190/year (Save 20%)</option>
          <option value="Enterprise-Monthly" <%= typeof plan !== 'undefined' && plan === 'Enterprise-Monthly' ? 'selected' : '' %>>Enterprise (Up to 150 Units) - Ksh. 6,999/month</option>
          <option value="Enterprise-Yearly" <%= typeof plan !== 'undefined' && plan === 'Enterprise-Yearly' ? 'selected' : '' %>>Enterprise (Up to 150 Units) - Ksh. 67,190/year (Save 20%)</option>
          <option value="Premium" <%= typeof plan !== 'undefined' && plan === 'Premium' ? 'selected' : '' %>>Premium (Unlimited Units) - Contact Us</option>
        </select>
      </div>

      <!-- Timestamp field -->
      <input type="hidden" name="formLoadedAt" id="formLoadedAt" value="">

      <button type="submit" id="signupButton" class="btn-submit">
        <i class="fas fa-user-plus mr-2"></i> Sign Up
      </button>
    </form>

    <div class="sign-up-link">
      <p>Already have an account? <a href="/login"><i class="fas fa-sign-in-alt mr-1"></i> <strong>Login</strong></a></p>
    </div>
  </div>

  <!-- Inject plan data via hidden elements -->
  <div id="data-container" style="display: none;">
    <input type="hidden" id="plan-details" value='<%- JSON.stringify({
      Basic: { monthly: { amount: 0, units: 5 }, yearly: { amount: 0, units: 5 } },
      Standard: { monthly: { amount: 1499, units: 20 }, yearly: { amount: 14390, units: 20 } },
      Pro: { monthly: { amount: 2999, units: 50 }, yearly: { amount: 28790, units: 50 } },
      Advanced: { monthly: { amount: 4499, units: 100 }, yearly: { amount: 43190, units: 100 } },
      Enterprise: { monthly: { amount: 6999, units: 150 }, yearly: { amount: 67190, units: 150 } },
      Premium: { monthly: { amount: null, units: "Unlimited" }, yearly: { amount: null, units: "Unlimited" } }
    }) %>'>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    const signupForm = document.getElementById('signupForm');
    const signupButton = document.getElementById('signupButton');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirm-password');
    const planDetails = JSON.parse(document.getElementById('plan-details').value);
    const formLoadedAt = document.getElementById('formLoadedAt');

    // Set timestamp when form loads
    formLoadedAt.value = Date.now();

    // Real-time validation
    const validateField = (field, regex, errorElement, errorMessage) => {
      field.addEventListener('input', () => {
        if (!regex.test(field.value)) {
          errorElement.textContent = errorMessage;
        } else {
          errorElement.textContent = '';
        }
      });
    };

    validateField(
      document.getElementById('username'),
      /^[a-zA-Z0-9_]{3,20}$/,
      document.getElementById('usernameError'),
      'Username must be 3-20 characters and contain only letters, numbers, or underscores'
    );

    validateField(
      document.getElementById('email'),
      /^[^\s@]+@[^\s@]+\.[^\s@]+$/,
      document.getElementById('emailError'),
      'Enter a valid email address'
    );

    validateField(
      document.getElementById('phone'),
      /^\+?[1-9]\d{1,14}$/,
      document.getElementById('phoneError'),
      'Enter a valid phone number (e.g., +254768123456)'
    );

    validateField(
      password,
      /(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{8,}/,
      document.getElementById('passwordError'),
      'Password must be 8+ characters with an uppercase, lowercase, number, and special character'
    );

    confirmPassword.addEventListener('input', () => {
      const errorElement = document.getElementById('confirmPasswordError');
      if (password.value !== confirmPassword.value) {
        errorElement.textContent = 'Passwords do not match';
      } else {
        errorElement.textContent = '';
      }
    });

    // Form submission handling
    signupForm.addEventListener('submit', (e) => {
      e.preventDefault();

      const errors = [];
      const submissionTime = Date.now();
      const loadTime = parseInt(formLoadedAt.value, 10);

      // Timestamp check (require at least 3 seconds)
      if (submissionTime - loadTime < 3000) {
        errors.push('Form submitted too quickly. Please try again.');
      }

      // Existing validation
      if (!/^[a-zA-Z0-9_]{3,20}$/.test(document.getElementById('username').value)) {
        errors.push('Invalid username');
      }
      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(document.getElementById('email').value)) {
        errors.push('Invalid email');
      }
      if (!/^\+?[1-9]\d{1,14}$/.test(document.getElementById('phone').value)) {
        errors.push('Invalid phone number');
      }
      if (!/(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{8,}/.test(password.value)) {
        errors.push('Invalid password');
      }
      if (password.value !== confirmPassword.value) {
        errors.push('Passwords do not match');
      }

      if (errors.length > 0) {
        const errorContainer = document.createElement('div');
        errorContainer.className = 'alert alert-danger';
        errorContainer.textContent = errors.join('. ');
        signupForm.prepend(errorContainer);
        setTimeout(() => errorContainer.remove(), 5000);
        return;
      }

      // Disable button and show loading state
      signupButton.disabled = true;
      signupButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Processing...';

      // Submit form
      setTimeout(() => {
        signupForm.submit();
      }, 500); // Brief delay for UX
    });

    // Preselect plan from URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const selectedPlan = urlParams.get('plan');
    if (selectedPlan) {
      const planSelect = document.getElementById('plan');
      planSelect.value = selectedPlan;
      if (!planSelect.value) {
        planSelect.value = 'Basic';
      }
    }
  </script>
</body>

</html>