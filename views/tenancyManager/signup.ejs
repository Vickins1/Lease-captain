<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lease Captain - Sign Up</title>
  <!-- Bootstrap CSS CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- FontAwesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="icon" href="/images/icon.png" type="image/png">

  <style>
    body,
    html {
      margin: 0;
      padding: 0;
      height: 100%;
      background-color: #f4f4f4;
    }

    .container-fluid {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    h1 {
      font-weight: bold; 
      color: #003366;
      font-size: 30px;
    }

    .right-section {
      padding: 30px;
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.15);
      width: 100%;
      max-width: 450px;
      margin: auto;
    }

    .right-section h1 {
      font-weight: bold;
      font-size: 2rem;
    }

    .btn-primary {
      background-color: #003366;
      border-color: #003366;
      font-size: 1rem;
    }

    .btn-primary:hover {
      background-color: #00509e;
      border-color: #00509e;
    }

    .alert {
      margin-bottom: 20px;
    }

    .form-group label i {
      margin-right: 5px;
    }

    @media (max-width: 768px) {
      .right-section {
        padding: 10px;
      }

      .right-section h1 {
        font-size: 1.5rem;
      }

      .btn-primary {
        font-size: 0.9rem;
      }
    }

    @media (max-width: 376px) {
      .container {
        margin-top: 20%;
        padding: 20px;
        width: 90%;
      }

      h1 {
        font-size: 1.2rem;
      }

      .form-group label {
        font-size: 0.7rem;
      }

      .btn-primary {
        font-size: 0.7rem;
      }

      .form-control {
        font-size: 0.6rem;
      }

      .btn {
        font-size: 0.7rem;
      }

      .p {
        font-size: 0.6rem;
      }
    }
  </style>
</head>

<body>
  <div class="container-fluid">
    <!-- Right Section for Signup Form -->
    <div class="right-section">
      <h1 class="text-center"><i class="fas fa-user-plus"></i> Sign Up</h1>

      <!-- Error Message -->
      <% if (error && error.length > 0) { %>
      <div class="alert alert-danger text-center" role="alert" style="font-size: 0.9rem;">
        <%= error %>
      </div>
      <% } %>

      <!-- Success Message -->
      <% if (success && success.length > 0) { %>
      <div class="alert alert-success text-center" role="alert" style="font-size: 0.9rem;">
        <%= success %>
      </div>
      <% } %>

      <style>
        @media (max-width: 576px) {
          .alert {
            font-size: 0.8rem;
          }
        }
      </style>

<form id="signupForm" action="/signup" method="POST">
  <div class="form-group">
    <label for="email"><i class="fas fa-envelope"></i> Email</label>
    <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required>
  </div>
  
  <div class="form-group">
    <label for="username"><i class="fas fa-user"></i> Username</label>
    <input type="text" name="username" id="username" class="form-control" placeholder="Enter your username" required>
  </div>
  
  <div class="form-group">
    <label for="phone"><i class="fas fa-phone"></i> Phone Number</label>
    <input type="tel" name="phone" id="phone" class="form-control" placeholder="Enter your phone number" required>
  </div>
  
  <div class="form-group">
    <label for="password"><i class="fas fa-lock"></i> Password</label>
    <div class="password-container">
      <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" required>
      <small class="form-check-inline">
        <input type="checkbox" id="showPassword" class="form-check-input">
        <label for="showPassword" class="form-check-label">Show Password</label>
      </small>
    </div>
  </div>
  
  <div class="form-group">
    <label for="confirm-password"><i class="fas fa-lock"></i> Confirm Password</label>
    <input type="password" name="confirm-password" id="confirm-password" class="form-control" placeholder="Confirm password" required>
  </div>
  <div class="form-group">
    <label for="plan"><i class="fas fa-layer-group"></i> Plan</label>
    <select name="plan" id="plan" class="form-control" required>
        <option value="Basic">Basic</option>
        <option value="Standard">Standard</option>
        <option value="Pro">Pro</option>
        <option value="Advanced">Advanced</option>
        <option value="Premium">Premium</option>
    </select>
</div>
<script>
  // Set the plan in the form based on the query parameter (if provided)
  const urlParams = new URLSearchParams(window.location.search);
  const selectedPlan = urlParams.get('plan');
  if (selectedPlan) {
      document.getElementById('plan').value = selectedPlan;
  }
  </script>
  
  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-user-plus"></i> Sign Up</button>
  </div>
</form>

<style>
  /* Responsive styles for password toggle */
  .password-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .form-check-inline {
    display: flex;
    align-items: center;
    margin-left: 0.5rem;
  }

  .form-check-label {
    font-size: 0.875rem; /* Smaller font size for smaller screens */
  }

  /* Responsive adjustments */
  @media (max-width: 576px) {
    .form-check-label {
      font-size: 0.75rem; /* Reduce font size further for very small screens */
    }
    .form-group label {
      font-size: 0.9rem; /* Adjust label size */
    }
    .form-control {
      font-size: 0.875rem; /* Smaller input text size */
      padding: 0.5rem 0.75rem; /* Adjust padding for smaller screens */
    }
  }
</style>


      <p class="text-center">Already have an account? <a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></p>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    // Show/Hide Password functionality
    document.getElementById('showPassword').addEventListener('change', function () {
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('confirm-password');
      passwordInput.type = this.checked ? 'text' : 'password';
      confirmPasswordInput.type = this.checked ? 'text' : 'password';
    });
  </script>
</body>

</html>
