@media (max-width: 768px) {
    h3, h5 {
        font-size: 0.95rem;
    }

    .btn {
        margin-bottom: 10px;
        font-size: 10px;
    }

    .modal-dialog {
        max-width: 90%;
        margin: auto;
    }

    .form-control {
        font-size: 0.775rem;
    }

