        <div class="container-fluid custom-container mt-4" style="padding-top: 60px;">
            <h2 class="text-center mb-4 font-weight-bold responsive-heading">
                Tenants
            </h2>


            <!-- Error Message -->
            <% if (error && error.length> 0) { %>
                <div class="alert alert-danger text-center" role="alert" style="font-size: 0.9rem;">
                    <%= error %>
                </div>
                <% } %>

                    <!-- Success Message -->
                    <% if (success && success.length> 0) { %>
                        <div class="alert alert-success text-center" role="alert" style="font-size: 0.9rem;">
                            <%= success %>
                        </div>
                        <% } %>
                            <style>
                                @media (max-width: 576px) {
                                    .alert {
                                        font-size: 0.8rem;
                                    }
                                }
                            </style>
                            <!-- Search bar for filtering tenants -->
                            <div class="row mb-3">
                                <div class="col-12 col-md-6">
                                    <input type="text" id="tenantSearch" class="form-control"
                                        placeholder="Search tenant by name, email, or property">
                                </div>
                            </div>

                            <!-- Section to display the tenant results dynamically -->
                            <div id="tenantResults">
                                <!-- The tenant table will be dynamically populated here -->
                            </div>


                            <!-- Add New Tenant Button -->
                            <div class="d-flex justify-content-end mb-3">
                                <!-- Full width on small screens, adjusted padding for responsiveness -->
                                <button type="button" class="btn btn-dark btn-block btn-md" data-toggle="modal"
                                    data-target="#addTenantModal" style="background-color: #003366; color: #ffffff;">
                                    Add New Tenant
                                </button>
                            </div>


                            <!-- Tenants Table -->
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered table-sm small-table">
                                    <thead class="text-center" style="background-color: #00172f; color: white;">
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Property</th>
                                            <th>Unit</th>
                                            <th>Door</th>
                                            <th>Lease Period</th>
                                            <th>Rent Paid</th>
                                            <th>Utility Paid</th>
                                            <th>Wallet</th>
                                            <th>Arrears</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center" style="background-color: #f8f9fa; color: black;">
                                        <% tenants.forEach((tenant, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= (index + 1) + ((currentPage - 1) * perPage) %>
                                                </td>
                                                <td>
                                                    <%= tenant.name %>
                                                </td>
                                                <td>
                                                    <%= tenant.email %>
                                                </td>
                                                <td>
                                                    <%= tenant.phone %>
                                                </td>
                                                <td>
                                                    <%= tenant.property ? tenant.property.name : 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= tenant.unit ? tenant.unit.unitName : 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= tenant.doorNumber || 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= new Date(tenant.leaseStartDate).toLocaleDateString() %> - <%=
                                                            new Date(tenant.leaseEndDate).toLocaleDateString() %>
                                                </td>
                                                <td>Ksh.<%= tenant.rentPaid ? tenant.rentPaid.toFixed(2) : "0.00" %>
                                                </td>
                                                <td>Ksh.<%= tenant.utilityPaid ? tenant.utilityPaid.toFixed(2) : "0.00"
                                                        %>
                                                </td>
                                                <td>Ksh.<%= tenant.walletBalance ? tenant.walletBalance.toFixed(2)
                                                        : "0.00" %>
                                                </td>
                                                <td>Ksh.<%= tenant.outstandingPayments ?
                                                        tenant.outstandingPayments.toFixed(2) : "0.00" %>
                                                </td>
                                                <td>
                                                    <%= tenant.leaseStatus || 'N/A' %>
                                                </td>
                                                <td>
                                                    <div class="actions-group" role="group" aria-label="Tenant actions">
                                                        <button class="btn edit-button p-1" data-toggle="modal" data-target="#editTenantModal<%= tenant._id %>">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                         <form action="/tenancy-manager/tenant/resend-email/<%= tenant._id %>" method="POST" class="inline-form">
                                                            <button class="btn resend-email-button p-1" type="submit">
                                                                <i class="fas fa-envelope"></i>
                                                            </button>
                                                        </form>
                                                        <button class="btn delete-button p-1" data-toggle="modal" data-target="#deleteTenantModal<%= tenant._id %>">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                
                                                <style>
                                                    .actions-group {
                                                        display: flex;
                                                        align-items: center;
                                                        gap: 10px; 
                                                    }
                                                
                                                    .btn {
                                                        border: none;
                                                        cursor: pointer;
                                                        font-size: 0.9rem;
                                                    }
                                                    .edit-button {
                                                        background-color: #17b2ca; 
                                                        color: white;
                                                    }
                                                    .delete-button {
                                                        background-color: #ee0c22;
                                                        color: white;
                                                    }
                                                    .resend-email-button {
                                                        background-color: #0071ce; 
                                                        color: white;
                                                    }
                                                    .btn:hover {
                                                        opacity: 0.85;
                                                    }
                                                
                                                    .inline-form {
                                                        display: inline;
                                                    }
                                                    .btn i {
                                                        margin: 0;
                                                    }
                                                </style>

                                            </tr>
                                            <style>
                                                .custom-container {
                                                    max-width: 1300px;
                                                    max-height: 100%;
                                                }

                                                /* Make the table smaller on larger screens */
                                                @media (min-width: 768px) {
                                                    .small-table {
                                                        font-size: 0.9rem;
                                                        /* Adjust font size */
                                                    }

                                                    .small-table th,
                                                    .small-table td {
                                                        padding: 0.5rem;
                                                        /* Adjust padding */
                                                    }
                                                }

                                                /* Maintain full width for smaller screens */
                                                @media (max-width: 367px) {
                                                    .small-table {
                                                        font-size: 0.6rem;
                                                        /* Default font size */
                                                    }

                                                    .small-table th,
                                                    .small-table td {
                                                        padding: 0.5rem;
                                                        /* Default padding */
                                                    }
                                                }
                                            </style>

                                            <!-- Edit Tenant Modal for each tenant -->
                                            <div class="modal fade" id="editTenantModal<%= tenant._id %>" tabindex="-1"
                                                role="dialog" aria-labelledby="editTenantModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-lg" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header"
                                                            style="background-color: #00172f; color: #ffffff;">
                                                            <h5 class="modal-title" id="editTenantModalLabel">Edit
                                                                Tenant</h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <!-- Form for editing tenant details -->
                                                            <form
                                                                action="/tenancy-manager/tenants/edit/<%= tenant._id %>"
                                                                method="POST">
                                                                <div class="row">
                                                                    <div class="col-12 col-md-6 form-group">
                                                                        <label for="tenantName">Name</label>
                                                                        <input type="text" class="form-control"
                                                                            id="tenantName" name="name"
                                                                            value="<%= tenant.name %>" required>
                                                                    </div>
                                                                    <div class="col-12 col-md-6 form-group">
                                                                        <label for="tenantEmail">Email</label>
                                                                        <input type="email" class="form-control"
                                                                            id="tenantEmail" name="email"
                                                                            value="<%= tenant.email %>" required>
                                                                    </div>
                                                                    <div class="col-12 col-md-6 form-group">
                                                                        <label for="tenantPhone">Phone</label>
                                                                        <input type="text" class="form-control"
                                                                            id="tenantPhone" name="phone"
                                                                            value="<%= tenant.phone %>" required>
                                                                    </div>
                                                                    <div class="col-12 col-md-6 form-group">
                                                                        <label for="leaseStartDate">Lease Start
                                                                            Date</label>
                                                                        <input type="date" class="form-control"
                                                                            id="leaseStartDate" name="leaseStartDate"
                                                                            value="<%= new Date(tenant.leaseStartDate).toISOString().substring(0, 10) %>"
                                                                            required>
                                                                    </div>
                                                                    <div class="col-12 col-md-6 form-group">
                                                                        <label for="leaseEndDate">Lease End Date</label>
                                                                        <input type="date" class="form-control"
                                                                            id="leaseEndDate" name="leaseEndDate"
                                                                            value="<%= new Date(tenant.leaseEndDate).toISOString().substring(0, 10) %>"
                                                                            required>
                                                                    </div>
                                                                </div>
                                                                <button type="submit" class="btn btn-dark"
                                                                    style="background-color: #00172f; color: #ffffff;">Update
                                                                    Tenant</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>







                                            <!-- Delete Tenant Modal for each tenant -->
                                            <div class="modal fade" id="deleteTenantModal<%= tenant._id %>"
                                                tabindex="-1" role="dialog" aria-labelledby="deleteTenantModalLabel"
                                                aria-hidden="true">
                                                <div class="modal-dialog modal-lg" role="document">
                                                    <div class="modal-content border-0 shadow-sm">
                                                        <div class="modal-header bg-danger text-white">
                                                            <h5 class="modal-title" id="deleteTenantModalLabel">
                                                                <i class="fas fa-trash-alt"></i>
                                                                Delete
                                                                Tenant -
                                                                <%= tenant.name %>
                                                            </h5>
                                                            <button type="button" class="close text-white"
                                                                data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure
                                                            you want to
                                                            delete <strong>
                                                                <%= tenant.name %>
                                                            </strong>? This
                                                            action cannot
                                                            be undone.
                                                        </div>
                                                        <div class="modal-footer bg-light">
                                                            <form id="deleteTenantForm<%= tenant._id %>" method="POST"
                                                                action="/tenancy-manager/tenants/delete/<%= tenant._id %>">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-dismiss="modal">
                                                                    <i class="fas fa-times"></i>
                                                                    Cancel
                                                                </button>
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="fas fa-trash"></i>
                                                                    Delete
                                                                </button>
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- Pagination controls -->
                            <nav aria-label="Tenant pagination">
                                <ul class="pagination justify-content-center">
                                    <% if (currentPage> 1) { %>
                                        <li class="page-item">
                                            <a class="page-link"
                                                href="/tenancy-manager/tenants?page=<%= currentPage - 1 %>"
                                                aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        <% } %>

                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                    <a class="page-link" href="/tenancy-manager/tenants?page=<%= i %>">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="/tenancy-manager/tenants?page=<%= currentPage + 1 %>"
                                                                aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                </ul>
                            </nav>
        </div>
        <style>
            .pagination .page-item.active .page-link {
                background-color: #003366;
                border-color: #003366;
            }

            @media (max-width: 576px) {
                .pagination .page-item .page-link {
                    font-size: 0.75rem;
                    padding: 0.3rem 0.5rem;
                }

                .pagination {
                    margin-top: 10px;
                }

                .pagination .page-item.active .page-link {
                    background-color: #003366;
                    border-color: #003366;
                }

                .pagination .page-item .page-link {
                    border-radius: 0.2rem;
                }

                .pagination .page-item:first-child .page-link,
                .pagination .page-item:last-child .page-link {
                    padding: 0.3rem 0.4rem;
                }
            }
        </style>


<!-- Modal Structure -->
<div class="modal fade" id="addTenantModal" tabindex="-1" role="dialog" aria-labelledby="addTenantModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="color: #003366;">
                <h5 class="modal-title" id="addTenantModalLabel">Add New Tenant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <% if (error && error.length> 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <form action="/tenancy-manager/tenant/new" method="POST">
                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="tenantName">Tenant Name</label>
                                <input type="text" class="form-control" id="tenantName" name="name"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="tenantEmail">Tenant Email</label>
                                <input type="email" class="form-control" id="tenantEmail" name="email"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="tenantPhone">Tenant Phone Number</label>
                                <input type="text" class="form-control" id="tenantPhone" name="phone"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="leaseStartDate">Lease Start Date</label>
                                <input type="date" class="form-control" id="leaseStartDate"
                                    name="leaseStartDate" required>
                            </div>
                            <div class="form-group">
                                <label for="leaseEndDate">Lease End Date</label>
                                <input type="date" class="form-control" id="leaseEndDate"
                                    name="leaseEndDate" required>
                            </div>
                            <!-- Rent Paid -->
                            <div class="form-group">
                                <label for="tenantRent">Rent Paid</label>
                                <input type="number" class="form-control" id="tenantRent" name="rentPaid"
                                    min="0" step="0.01">
                            </div>
                            <!-- Utilities Paid -->
                            <div class="form-group">
                                <label for="utilitiesPaid">Utilities Paid</label>
