        <script>
            let utilityCount = 1;

            function addUtility() {
                const utilitiesContainer = document.getElementById('utilitiesContainer');

                const newUtilityDiv = document.createElement('div');
                newUtilityDiv.className = 'utility-item';

                newUtilityDiv.innerHTML = `
                    <div class="form-group">
                        <label for="utilityType">Utility Type</label>
                        <input type="text" class="form-control" name="utilities[${utilityCount}][type]" required
                            placeholder="e.g. service charge, electricity, water...">
                    </div>
                    <div class="form-group">
                        <label for="utilityAmount">Utility Amount (Ksh)</label>
                        <input type="number" class="form-control" name="utilities[${utilityCount}][amount]"
                            required>
                    </div>
                `;

                utilitiesContainer.appendChild(newUtilityDiv);
                utilityCount++; // Increment the utility count
            }
        </script>







