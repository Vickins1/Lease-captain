        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <!-- Card for Property Units Table -->
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Property Units</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <!-- Button to add a new property unit -->
                                    <button type="button" class="btn btn-dark mb-4 w-30"
                                        style="background-color: #003366; color: white;" data-toggle="modal"
                                        data-target="#addUnitModal">
                                        Add Property Unit
                                    </button>

                                    <!-- Error Message -->
                                    <% if (error && error.length> 0) { %>
                                        <div class="alert alert-danger text-center" role="alert"
                                            style="font-size: 0.9rem;">
                                            <%= error %>
                                        </div>
                                        <% } %>

                                            <!-- Success Message -->
                                            <% if (success && success.length> 0) { %>
                                                <div class="alert alert-success text-center" role="alert"
                                                    style="font-size: 0.9rem;">
                                                    <%= success %>
                                                </div>
                                                <% } %>

                                                    <!-- Responsive Table -->
                                                    <div class="table-responsive">
                                                        <table id="example1" class="table table-bordered table-striped">
                                                            <thead class="text-center"
                                                                style="background-color: #00172f; color: white;">
                                                                <tr>
                                                                    <th>#</th>
                                                                    <th>Property</th>
                                                                    <th>Unit Type</th>
                                                                    <th>No. of Units</th>
                                                                    <th>Status</th>
                                                                    <th>Rent/Utilities</th>
                                                                    <th>Deposit</th>
                                                                    <th>Actions</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="unitTableBody">
                                                                <% units.forEach(function(unit, index) { %>
                                                                    <tr>
                                                                        <td>
                                                                            <%= index + 1 %>
                                                                        </td>
                                                                        <td>
                                                                            <%= unit.property || 'N/A' %>
                                                                        </td>
                                                                        <td>
                                                                            <%= unit.unitType %>
                                                                        </td>
                                                                        <td>
                                                                            <%= unit.unitCount %>
                                                                        </td>
                                                                        <td>
                                                                            <% if (unit.vacantUnits===unit.unitCount) {
                                                                                %>
                                                                                <span
                                                                                    class="badge badge-danger">Vacant</span>
                                                                                <% } else if (unit.vacantUnits===0) { %>
                                                                                    <span
                                                                                        class="badge badge-success">Fully
                                                                                        Occupied</span>
                                                                                    <% } else { %>
                                                                                        <span
                                                                                            class="badge badge-warning">Partially
                                                                                            Occupied</span>
                                                                                        <% } %>
                                                                        </td>
                                                                        <td>Ksh.<%= unit.unitPrice %>
                                                                                <br><strong>Utilities:</strong>Ksh.<%=
                                                                                    unit.utilitiesAmount || 0 %>
                                                                        </td>

                                                                        <td>Ksh.<%= unit.deposit || 0 %>
                                                                        </td>
                                                                        <td class="text-center">
                                                                            <div class="btn-group" role="group"
                                                                                aria-label="Property Actions">
                                                                                <button class="btn btn-info btn-sm mb-1"
                                                                                    data-toggle="modal"
                                                                                    data-target="#editModal<%= unit.id %>">
                                                                                    <i class="fas fa-edit"></i>
                                                                                </button>
                                                                                <button
                                                                                    class="btn btn-danger btn-sm mb-1"
                                                                                    data-toggle="modal"
                                                                                    data-target="#deleteModal<%= unit.id %>">
                                                                                    <i class="fas fa-trash-alt"></i>
                                                                                </button>
                                                                            </div>
                                                                        </td>
                                                                    </tr>

                                                                    <!-- Edit Modal -->
                                                                    <div class="modal fade" id="editModal<%= unit.id %>"
                                                                        tabindex="-1" role="dialog"
                                                                        aria-labelledby="editModalLabel<%= unit.id %>"
                                                                        aria-hidden="true">
                                                                        <div class="modal-dialog" role="document">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h5 class="modal-title"
                                                                                        id="editModalLabel<%= unit.id %>">
                                                                                        Edit Property Unit</h5>
                                                                                    <button type="button" class="close"
                                                                                        data-dismiss="modal"
                                                                                        aria-label="Close">
                                                                                        <span
                                                                                            aria-hidden="true">&times;</span>
                                                                                    </button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <form
                                                                                        action="/tenancy-manager/property/units/edit/<%= unit.id %>"
                                                                                        method="POST">
                                                                                        <!-- Unit Type -->
                                                                                        <div class="form-group">
                                                                                            <label
                                                                                                for="unitType<%= unit.id %>">Unit
                                                                                                Type</label>
                                                                                            <select class="form-control"
                                                                                                id="unitType<%= unit.id %>"
                                                                                                name="unitType"
                                                                                                required>
                                                                                                <option
                                                                                                    value="Single Room"
                                                                                                    <%=unit.unitType==='Single Room'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Single Room
                                                                                                </option>
                                                                                                <option
                                                                                                    value="Bedsitter"
                                                                                                    <%=unit.unitType==='Bedsitter'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Bedsitter</option>
                                                                                                <option
                                                                                                    value="Studio Apartment"
                                                                                                    <%=unit.unitType==='Studio Apartment'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Studio Apartment
                                                                                                </option>
                                                                                                <option
                                                                                                    value="1 Bedroom Apartment"
                                                                                                    <%=unit.unitType==='1 Bedroom Apartment'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >1 Bedroom Apartment
                                                                                                </option>
                                                                                                <option
                                                                                                    value="2 Bedroom Apartment"
                                                                                                    <%=unit.unitType==='2 Bedroom Apartment'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >2 Bedroom Apartment
                                                                                                </option>
                                                                                                <option
                                                                                                    value="3 Bedroom Apartment"
                                                                                                    <%=unit.unitType==='3 Bedroom Apartment'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >3 Bedroom Apartment
                                                                                                </option>
                                                                                                <option
                                                                                                    value="Townhouse"
                                                                                                    <%=unit.unitType==='Townhouse'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Townhouse</option>
                                                                                                <option
                                                                                                    value="Maisonette"
                                                                                                    <%=unit.unitType==='Maisonette'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Maisonette</option>
                                                                                                <option value="Condo"
                                                                                                    <%=unit.unitType==='Condo'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Condo</option>
                                                                                                <option
                                                                                                    value="Multi Family Home"
                                                                                                    <%=unit.unitType==='Multi Family Home'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Multi Family Home
                                                                                                </option>
                                                                                                <option
                                                                                                    value="Single Family Home"
                                                                                                    <%=unit.unitType==='Single Family Home'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Single Family Home
                                                                                                </option>
                                                                                                <option value="Villa"
                                                                                                    <%=unit.unitType==='Villa'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Villa</option>
                                                                                                <option
                                                                                                    value="Penthouse"
                                                                                                    <%=unit.unitType==='Penthouse'
                                                                                                    ? 'selected' : '' %>
                                                                                                    >Penthouse</option>
                                                                                            </select>
                                                                                        </div>

                                                                                        <!-- Number of Units -->
                                                                                        <div class="form-group">
                                                                                            <label
                                                                                                for="unitCount<%= unit.id %>">Number
                                                                                                of Units</label>
                                                                                            <input type="number"
                                                                                                class="form-control"
                                                                                                id="unitCount<%= unit.id %>"
                                                                                                name="unitCount"
                                                                                                value="<%= unit.unitCount %>"
                                                                                                required>
                                                                                        </div>

                                                                                        <!-- Rent Price -->
                                                                                        <div class="form-group">
                                                                                            <label
                                                                                                for="unitPrice<%= unit.id %>">Unit
                                                                                                Rent Price (Ksh)</label>
                                                                                            <input type="number"
                                                                                                class="form-control"
                                                                                                id="unitPrice<%= unit.id %>"
                                                                                                name="unitPrice"
                                                                                                value="<%= unit.unitPrice %>"
                                                                                                required>
                                                                                        </div>

                                                                                        <!-- Utilities Amount -->
                                                                                        <div class="form-group">
                                                                                            <label
                                                                                                for="utilitiesAmount<%= unit.id %>">Utilities
                                                                                                Amount (Ksh)</label>
                                                                                            <input type="number"
                                                                                                class="form-control"
                                                                                                id="utilitiesAmount<%= unit.id %>"
                                                                                                name="utilitiesAmount"
                                                                                                value="<%= unit.utilitiesAmount || 0 %>"
                                                                                                required>
                                                                                        </div>

                                                                                        <!-- Deposit -->
                                                                                        <div class="form-group">
                                                                                            <label
                                                                                                for="deposit<%= unit.id %>">Deposit
                                                                                                Amount (Ksh)</label>
                                                                                            <input type="number"
                                                                                                class="form-control"
                                                                                                id="deposit<%= unit.id %>"
                                                                                                name="deposit"
                                                                                                value="<%= unit.deposit %>"
                                                                                                required>
                                                                                        </div>

                                                                                        <!-- Submit Button -->
                                                                                        <button type="submit"
                                                                                            class="btn btn-dark"
                                                                                            style="background-color: #00172f; color: white;">Save
                                                                                            changes</button>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>



                                                                    <!-- Delete Modal -->
                                                                    <div class="modal fade"
                                                                        id="deleteModal<%= unit.id %>" tabindex="-1"
                                                                        role="dialog"
                                                                        aria-labelledby="deleteModalLabel<%= unit.id %>"
                                                                        aria-hidden="true">
                                                                        <div class="modal-dialog" role="document">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header"
                                                                                    style="background-color: #ff1212; color: white;">
