                                        <table class="table m-0">
                                            <thead>
                                                <tr>
                                                    <th>Payment ID</th>
                                                    <th>Tenant</th>
                                                    <th>Status</th>
                                                    <th>Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (payments && payments.length> 0) { %>
                                                    <% payments.forEach(payment=> { %>
                                                        <tr>
                                                            <td>
                                                                <a href="/tenancy-manager/payments">
                                                                    <%= payment.transactionId || 'N/A' %>
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <%= payment.tenant ? payment.tenant.name : 'N/A' %>
                                                                    (<%= payment.tenant && payment.tenant.property ?
                                                                        payment.tenant.property.name : 'N/A' %> -
                                                                        <%= payment.tenant && payment.tenant.unit ?
                                                                            payment.tenant.unit.name : 'N/A' %>)
                                                            </td>
                                                            <td>
                                                                <span class="<%= payment.status === 'completed' ? 'text-success' : 
                                        payment.status === 'pending' ? 'text-warning' : 
                                        payment.status === 'failed' ? 'text-danger' : 'text-secondary' %>">
                                                                    <i class="fas <%= payment.status === 'completed' ? 'fa-check-circle' : 
                                            payment.status === 'pending' ? 'fa-hourglass-half' : 
                                            payment.status === 'failed' ? 'fa-times-circle' : 'fa-question-circle' %>">
                                                                    </i>
                                                                    <%= payment.status ?
                                                                        payment.status.charAt(0).toUpperCase() +
                                                                        payment.status.slice(1) : 'N/A' %>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <div class="sparkbar"
                                                                    data-color="<%= payment.status === 'completed' ? '#00a65a' : '#f39c12' %>"
                                                                    data-height="20">
                                                                    Ksh. <%= payment.amount ? payment.amount.toFixed(2)
                                                                        : '0.00' %>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="4" class="text-center text-muted">No
                                                                        recent payments found.</td>
                                                                </tr>
                                                                <% } %>
