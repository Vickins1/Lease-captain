    <script>
        async function startNewUserTour() {
            const overlay = document.createElement('div');
            overlay.className = 'tour-overlay';
            document.body.appendChild(overlay);

            // Define all steps with their prerequisites and dynamic checks
            const steps = [
                {
                    target: '.nav-link[href="/tenancy-manager/properties"]',
                    title: 'Step 1: Add Your First Property',
                    content: 'Welcome aboard! Let’s get started by adding your first property. Please add a property to continue.',
                    position: { top: '50px', left: '250px' },
                    check: async () => {
                        const response = await fetch('/api/user/progress', { credentials: 'include' });
                        const progress = await response.json();
                        return progress.hasProperties;
                    }
                },
                {
                    target: '.nav-link[href="/tenancy-manager/property/units"]',
                    title: 'Step 2: Add Property Units',
                    content: 'Next, add units to your property. Please add at least one unit to proceed.',
                    position: { top: '100px', left: '250px' },
                    check: async () => {
                        const response = await fetch('/api/user/progress', { credentials: 'include' });
                        const progress = await response.json();
                        return progress.hasPropertyUnits;
                    }
                },
                {
                    target: '.nav-link[href="/tenancy-manager/tenants"]',
                    title: 'Step 3: Add Tenants',
                    content: 'Time to bring in your tenants! Please add a tenant to continue.',
                    position: { top: '200px', left: '250px' },
                    check: async () => {
                        const response = await fetch('/api/user/progress', { credentials: 'include' });
                        const progress = await response.json();
                        return progress.hasTenants;
                    }
                },
                {
                    target: '.nav-link[href="/connect"]',
                    title: 'Step 4: Connect Your UmsPay Account',
                    content: 'Let’s set up payments! Connect your UmsPay account to proceed.',
                    position: { top: '500px', left: '250px' },
                    check: async () => {
                        const response = await fetch('/api/user/progress', { credentials: 'include' });
                        const progress = await response.json();
                        return progress.hasPaymentConnected;
                    }
                },
                {
                    target: '.nav-link[href="/tenancy-manager/propertyListing"]',
                    title: 'Step 5: List Your Properties',
                    content: 'Finally, showcase your properties! Complete this step to finish the tour.',
                    position: { top: '150px', left: '250px' },
                    check: () => Promise.resolve(true)
                }
            ];

            // Find the first incomplete step to start from
            let currentStep = 0;

            async function findFirstIncompleteStep() {
                for (let i = 0; i < steps.length; i++) {
                    const isComplete = await steps[i].check();
                    if (!isComplete) {
                        currentStep = i;
                        return;
                    }
                }
                currentStep = steps.length - 1; // All steps complete, go to the last one
            }

            async function showStep(stepIndex) {
                if (stepIndex >= steps.length) {
                    await endTour();
                    return;
                }
                const step = steps[stepIndex];
                const targetElement = document.querySelector(step.target);
                if (!targetElement) {
                    console.warn(`Target element for step ${stepIndex + 1} not found: ${step.target}`);
                    await nextStep();
                    return;
                }

                document.querySelectorAll('.tour-step').forEach(el => el.remove());
                document.querySelectorAll('.highlight').forEach(el => el.classList.remove('highlight'));
                targetElement.classList.add('highlight');

                const stepDiv = document.createElement('div');
                stepDiv.className = 'tour-step';
                stepDiv.style.top = step.position.top;
                stepDiv.style.left = step.position.left;

                const isStepComplete = await step.check();
                stepDiv.innerHTML = `
                <h3>${step.title}</h3>
                <p>${step.content}</p>
                <button id="next-btn" ${!isStepComplete ? 'disabled' : ''}>
                    ${stepIndex === steps.length - 1 ? 'Finish' : 'Next'}
                </button>
                <p>${!isStepComplete ? 'Please complete this step before proceeding.' : ''}</p>
            `;
                document.body.appendChild(stepDiv);
                overlay.style.display = 'block';

                // Add event listener to the Next/Finish button
                document.getElementById('next-btn').addEventListener('click', nextStep);

                // Periodically check if the step becomes complete
                if (!isStepComplete) {
                    const interval = setInterval(async () => {
                        if (await step.check()) {
                            document.getElementById('next-btn').disabled = false;
                            stepDiv.querySelector('p:last-child').textContent = '';
                            clearInterval(interval);
                        }
                    }, 2000); // Check every 2 seconds
                }
            }

            async function endTour() {
                overlay.remove();
                document.querySelectorAll('.tour-step').forEach(el => el.remove());
                document.querySelectorAll('.highlight').forEach(el => el.classList.remove('highlight'));

                try {
                    const response = await fetch('/api/user/complete-tour', {
                        method: 'POST',
                        credentials: 'include',
                        headers: { 'Content-Type': 'application/json' }
                    });
                    if (!response.ok) throw new Error('Failed to complete tour');
                    alert('Congrats! You’re all set to manage your properties like a pro!');
                } catch (error) {
                    console.error('Error completing tour:', error);
                    alert('Tour completed, but there was an issue saving your progress. Please try again.');
                }
            }

            async function nextStep() {
                if (await steps[currentStep].check()) {
                    currentStep++;
                    await showStep(currentStep);
                }
            }

            // Start the tour at the first incomplete step
            await findFirstIncompleteStep();
            await showStep(currentStep);
            window.nextStep = nextStep;
        }

        // Start the tour if the user is new
        if (window.isNewUser) {
            startNewUserTour();
        }
    </script>

