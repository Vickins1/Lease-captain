        .tour-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 1000;
            display: none;
        }

        .tour-step {
            position: absolute;
            background: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            max-width: 350px;
            font-family: Arial, sans-serif;
            animation: fadeIn 0.5s ease-in-out;
            z-index: 1060;
        }

        .tour-step h3 {
            color: #003366;
            margin-top: 0;
        }

        .tour-step button {
            background-color: #003366;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

        .tour-step button:hover {
            background-color: #0055a5;
        }

        .highlight {
            position: relative;
            z-index: 1001;
            border: 2px solid #003366;
            border-radius: 5px;
            animation: pulse 1.5s infinite;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(0, 51, 102, 0.7);
            }

            70% {
                box-shadow: 0 0 0 10px rgba(0, 51, 102, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(0, 51, 102, 0);
            }
        }
    </style>
