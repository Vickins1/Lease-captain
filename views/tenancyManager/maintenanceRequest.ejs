<div class="content-wrapper">
    <!-- Messages -->
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger animate__animated animate__fadeIn text-center">
            <i class="fas fa-exclamation-circle mr-2"></i> <%= error %>
        </div>
    <% } %>
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success animate__animated animate__fadeIn text-center">
            <i class="fas fa-check-circle mr-2"></i> <%= success %>
        </div>
    <% } %>

    <section class="content">
        <div class="container-fluid mt-4">
            <div class="card custom-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tools mr-2"></i> Maintenance Requests</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover custom-table mb-0">
                            <thead>
                                <tr>
                                    <th>Tenant</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% requests.forEach(request => { %>
                                    <tr>
                                        <td><%= request.tenantId.name %></td>
                                        <td><%= request.description %></td>
                                        <td>
                                            <span class="badge <%= request.status === 'Pending' ? 'badge-warning' : 
                                                                  request.status === 'In Progress' ? 'badge-info' : 'badge-success' %>">
                                                <%= request.status.charAt(0).toUpperCase() + request.status.slice(1) %>
                                            </span>
                                        </td>
                                        <td><%= request.createdAt ? new Date(request.createdAt).toLocaleDateString() : 'N/A' %></td>
                                        <td>
                                            <form action="/maintenance-requests/<%= request._id %>" method="POST" class="form-inline">
                                                <div class="input-group input-group-sm">
                                                    <select name="status" onchange="this.form.submit()" class="form-control custom-select">
                                                        <option value="Pending" <%= request.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                                        <option value="In Progress" <%= request.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                                                        <option value="Completed" <%= request.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                                    </select>
                                                    <div class="input-group-append">
                                                        <button type="button" class="btn btn-primary schedule-btn" data-toggle="modal" data-target="#scheduleMaintenanceModal<%= request._id %>">
                                                            <i class="fas fa-calendar-alt mr-1"></i> Schedule
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </td>
                                    </tr>

                                    <!-- Modal for Schedule Maintenance -->
                                    <div class="modal fade" id="scheduleMaintenanceModal<%= request._id %>" tabindex="-1" role="dialog" aria-labelledby="scheduleMaintenanceModalLabel<%= request._id %>" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content custom-modal">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="scheduleMaintenanceModalLabel<%= request._id %>"><i class="fas fa-calendar-alt mr-2"></i> Schedule Maintenance</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/schedule" method="POST" class="modern-form">
                                                        <input type="hidden" name="requestId" value="<%= request._id %>">
                                                        <div class="form-group">
                                                            <label for="scheduleDate<%= request._id %>">Select Date</label>
                                                            <input type="date" id="scheduleDate<%= request._id %>" name="scheduleDate" class="form-control custom-input" required>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-save mr-2"></i> Schedule Maintenance</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
