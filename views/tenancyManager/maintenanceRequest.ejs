<!-- Content Wrapper -->
<div class="content-wrapper">
    <!-- Error and Success Messages -->
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger text-center" role="alert"><%= error %></div>
    <% } %>
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success text-center" role="alert"><%= success %></div>
    <% } %>

    <div class="container-fluid mt-4">
        <div class="card shadow-sm">
            <div class="card-header text-black">
                <h5 class="mb-0">Maintenance Requests</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-sm table-hover mb-0">
                        <thead class="thead-white" style="background-color: #003366; color: #ffffff;">
                            <tr>
                                <th>Tenant</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% requests.forEach(request => { %>
                                <tr>
                                    <td><%= request.tenantId.name %></td>
                                    <td><%= request.description %></td>
                                    <td>
                                        <span class="badge badge-<%= request.status === 'Pending' ? 'warning' : request.status === 'In Progress' ? 'info' : 'success' %>">
                                            <%= request.status.charAt(0).toUpperCase() + request.status.slice(1) %>
                                        </span>
                                    </td>
                                    <td><%= request.createdAt ? new Date(request.createdAt).toLocaleDateString() : 'N/A' %></td>
                                    <td>
                                        <form action="/maintenance-requests/<%= request._id %>" method="POST" class="form-inline">
                                            <div class="input-group input-group-sm">
                                                <select name="status" onchange="this.form.submit()" class="form-select custom-select">
                                                    <option value="Pending" <%= request.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                                    <option value="In Progress" <%= request.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                                                    <option value="Completed" <%= request.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                                </select>
                                                <button type="button" class="btn btn-dark schedule-btn" data-toggle="modal" data-target="#scheduleMaintenanceModal<%= request._id %>">
                                                    Schedule
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>

                                <!-- Modal for Schedule Maintenance -->
                                <div class="modal fade" id="scheduleMaintenanceModal<%= request._id %>" tabindex="-1" role="dialog" aria-labelledby="scheduleMaintenanceModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header bg-dark text-white">
                                                <h5 class="modal-title" id="scheduleMaintenanceModalLabel">Schedule Maintenance</h5>
                                                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="/schedule" method="POST">
                                                    <input type="hidden" name="requestId" value="<%= request._id %>">
                                                    <div class="form-group">
                                                        <label for="scheduleDate">Select Date</label>
                                                        <input type="date" id="scheduleDate" name="scheduleDate" class="form-control" required>
                                                    </div>
                                                    <div class="text-center">
                                                        <button type="submit" class="btn btn-dark">Schedule Maintenance</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
