    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            font-size: 14px;
            margin: 0; 
            padding: 0;
            overflow-x: hidden; 
        }
    
        .container {
            padding: 15px;
            padding-top: 30px;
        }
    
        /* Sidebar with White Background */
        .sidebar {
            background-color: #ffffff;
            color: #333333;
            height: 100vh; /* Full viewport height */
            width: 220px;
            position: fixed; /* Fixed position to ensure it stays in view */
            top: 0;
            left: 0;
            padding: 20px 10px;
            overflow-y: auto; /* Enable vertical scrolling for sidebar content */
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
            z-index: 1000; /* Ensure it appears above other elements */
        }
    
        /* Sidebar Title Styling */
        .sidebar-title {
            margin-bottom: 20px;
            color: #000000;
            font-size: 1em;
            text-align: center;
            font-weight: 700;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 8px;
        }
    
        /* Navigation Link Styles */
        .sidebar .nav-link {
            color: #333333;
            padding: 10px 15px;
            margin: 8px 0;
            text-decoration: none;
            font-size: 0.9em;
            display: flex;
            align-items: center;
            border-radius: 8px;
            transition: background-color 0.3s, color 0.3s;
        }
    
        .sidebar .nav-link i {
            margin-right: 10px;
            color: #555555;
        }
    
        /* Hover Effects */
        .sidebar .nav-link:hover {
            background-color: #f8f9fa;
            color: #003366;
        }
    
        .sidebar .nav-link:hover i {
            color: #003366;
        }
    
        /* Active Link Styling */
        .sidebar .nav-link.active {
            background-color: #003366;
            color: #ffffff;
            font-weight: bold;
        }
    
        .sidebar .nav-link.active i {
            color: #ffffff;
        }
    
        .sidebar .nav-link:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
    
        /* Content Styling */
        .content {
            margin-left: 220px; /* Ensure content aligns with sidebar */
            padding: 15px;
            transition: margin-left 0.3s ease;
        }
    
        .header {
            background-color: #ffffff;
            color: #000000;
            padding: 8px 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: calc(100% - 220px); /* Adjust width to fit next to sidebar */
            top: 0;
            left: 220px; /* Align with sidebar width */
            z-index: 1001; /* Ensure header appears above content */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: left 0.3s ease, width 0.3s ease;
        }
    
        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                left: 0;
            }
    
            .content {
                margin-left: 0;
            }
    
            .header {
                width: 100%;
                left: 0;
            }
    
            #sidebarToggle {
                display: block;
            }
        }
    
        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background: #ffffff;
            color: rgb(0, 0, 0);
            text-align: center;
            padding: 5px 0;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
    
</head>

