            width: 90%;
        }
        .doughnut-charts {
            flex-direction: column;
            align-items: center;
        }
    }
</style>

<!-- JavaScript to Initialize Charts -->
<script>
    // Tenant Overview Line Chart
    const tenantChartData = {
        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
        datasets: [{
            label: 'Rent Paid (in thousands)',
            data: [8, 15, 20, 18, 25, 28, 30, 35, 38, 40, 42, 45],
            backgroundColor: 'rgba(0, 102, 204, 0.5)',
            borderColor: '#0066cc',
            borderWidth: 1,
            fill: true,
            tension: 0.3
        }, {
            label: 'Maintenance Requests',
            data: [3, 5, 7, 6, 8, 10, 9, 11, 12, 10, 13, 15],
            backgroundColor: 'rgba(255, 99, 132, 0.5)',
            borderColor: '#ff6384',
            borderWidth: 1,
            fill: true,
            tension: 0.3
        }]
    };

    const tenantCtx = document.getElementById('tenantChart').getContext('2d');
    new Chart(tenantCtx, {
        type: 'line',
        data: tenantChartData,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: { beginAtZero: true },
                x: { grid: { display: false } }
            }
        }
    });

    // Rent Payment Doughnut Chart
    const rentData = {
        labels: ['Paid', 'Pending'],
        datasets: [{
            label: 'Rent Payment',
            data: [70, 30],
            backgroundColor: ['#4caf50', '#ff5722']
        }]
    };

    const rentCtx = document.getElementById('rentChart').getContext('2d');
    new Chart(rentCtx, {
        type: 'doughnut',
        data: rentData,
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'top' }
            }
        }
    });

    // Utility Payment Doughnut Chart
    const utilityData = {
        labels: ['Paid', 'Pending'],
        datasets: [{
            label: 'Utility Payment',
            data: [60, 40],
            backgroundColor: ['#2196f3', '#ff9800']
        }]
    };

    const utilityCtx = document.getElementById('utilityChart').getContext('2d');
    new Chart(utilityCtx, {
        type: 'doughnut',
        data: utilityData,
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'top' }
            }
        }
    });
</script>





