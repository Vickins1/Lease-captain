<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tenant Portal - Sign-in</title>
  
  <!-- Bootstrap CSS CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <link rel="icon" href="/images/icon.png" type="image/png">

  <style>
    body {
      background-color: #f7f7f7;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      flex-direction: column;
    }
  
    h2 {
      color: #003366;
      text-align: center;
      margin-bottom: 20px;
      font-size: 24px;
    }
  
    .form-label {
      font-weight: bold;
      color: #003366;
      margin-bottom: 5px;
    }
  
    .form-group {
      margin-bottom: 20px;
      width: 500px;
    }
  
    input[type="password"], input[type="text"], input[type="email"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
    }
  
    input[type="password"]:focus, input[type="text"]:focus, input[type="email"]:focus {
      outline: none;
      border-color: #003366;
    }
  
    .btn-primary {
      background-color: #003366;
      color: white;
      border: none;
      padding: 10px;
      width: 100%;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
    }
  
    .btn-primary:hover {
      background-color: #005bb5;
    }
  
    .social-login {
      text-align: center;
      margin-top: 15px;
    }
  
    .social-login .btn {
      width: 100%;
      max-width: 250px;
      margin: 10px auto;
    }
  
    .forgot-password {
      text-align: right;
    }
  
    .forgot-password a {
      color: #003366;
      text-decoration: none;
    }
  
    .forgot-password a:hover {
      text-decoration: underline;
    }
  
    .sign-up-link {
      text-align: center;
      margin-top: 15px;
    }
  
    .sign-up-link a {
      color: #003366;
      font-weight: bold;
      text-decoration: none;
    }
  
    .sign-up-link a:hover {
      text-decoration: underline;
    }
  
    .logo {
      text-align: center;
      margin-bottom: 20px;
    }
  
    .logo img {
      width: 200px;
    }
  
    /* Responsive design */
    @media (max-width: 768px) {
      h2 {
        font-size: 20px;
      }
  
      .logo img {
        width: 120px;
      }
    }
  
    @media (max-width: 576px) {
      h2 {
        font-size: 18px;
      }
      .form-group{
        max-width: 350px;
      }
  
      .btn-primary {
        font-size: 0.9rem;
      }
  
      .logo img {
        width: 100px;
      }
    }
  </style>
  
</head>
<body>
  <div class="login-container">
    <!-- Logo -->
    <div class="logo">
      <img src="/images/logo2.png" alt="Tenant Portal Logo">
    </div>
    <h2><strong>Sign-in to Tenant Portal</strong></h2>

    <!-- Login Form -->
    <form action="/tenant/login" method="POST" id="tenantLoginForm" onsubmit="showLoader(event)">
      <!-- Error and Success Messages -->
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger text-center" role="alert">
          <%= error %>
        </div>
      <% } %>
      <% if (success && success.length > 0) { %>
        <div class="alert alert-success text-center" role="alert">
          <%= success %>
        </div>
      <% } %>

      <!-- Username -->
      <div class="form-group">
        <label for="name" class="form-label"><i class="fas fa-user"></i> Username</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="e.g John" required>
      </div>

      <!-- Password -->
      <div class="form-group">
        <label for="password"><i class="fas fa-lock"></i> Password</label>
        <div class="d-flex align-items-center position-relative">
          <input type="password" name="password" id="password" class="form-control" 
            placeholder="enter your password" required style="flex: 1;">
          <span id="togglePassword" class="position-absolute" style="right: 10px; cursor: pointer;">
            <i class="fas fa-eye"></i>
          </span>
        </div>
      </div>

      <!-- Login Button -->
      <button type="submit" class="btn btn-primary btn-block">Sign-in</button>

      <!-- Forgot Password -->
      <div class="forgot-password mt-2">
        <a href="#" data-toggle="modal" data-target="#forgotPasswordModal">Forgot Password?</a>
      </div>
      <!-- Social Login -->
      <div class="social-login">
        <p class="text-muted mt-3">Or log in with</p>
        <a href="/auth/google" class="btn btn-outline-danger">
          <i class="fab fa-google"></i> Google
        </a>
        <a href="/auth/facebook" class="btn btn-outline-primary">
          <i class="fab fa-facebook"></i> Facebook
        </a>
      </div>
    </form>
  </div>

  <!-- Forgot Password Modal -->
  <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Reset Password</h5>
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/forgot-password" method="POST">
            <div class="form-group">
              <label for="email">Enter your email address</label>
              <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and Dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<script>
  const passwordField = document.getElementById('password');
  const togglePassword = document.getElementById('togglePassword');

  togglePassword.addEventListener('click', () => {
    const type = passwordField.type === 'password' ? 'text' : 'password';
    passwordField.type = type;

    // Toggle the icon
    togglePassword.innerHTML = passwordField.type === 'password' 
      ? '<i class="fas fa-eye"></i>' 
      : '<i class="fas fa-eye-slash"></i>';
  });
</script>

  <!-- Password Visibility Toggle -->
  <script>
    document.getElementById('showPassword').addEventListener('change', function () {
      const passwordField = document.getElementById('password');
      passwordField.type = this.checked ? 'text' : 'password';
    });

    function showLoader(event) {
      event.preventDefault();
      // Show loader or process login (add custom logic here)
      document.getElementById('tenantLoginForm').submit();
    }
  </script>
</body>
</html>
