<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tenant Portal</title>

    <!-- Include jQuery First -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            font-family: Arial, sans-serif;
            margin: 0; /* Reset margin */
        }

        .header {
            background-color: #000000; /* Dark header background */
            color: white; /* White text */
            padding: 10px 20px; /* Padding for header */
            display: flex; /* Flexbox layout */
            justify-content: space-between; /* Space between items */
            align-items: center; /* Center items vertically */
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000; /* Ensure header stays above other elements */
        }

        .sidebar {
            background-color: #000000; /* Dark background for sidebar */
            height: 100vh; /* Full viewport height */
            padding: 20px;
            position: fixed; /* Fix the position */
            top: 0; /* Align to the top */
            left: 0; /* Align to the left */
            width: 250px; /* Set a fixed width */
            overflow-y: auto; /* Enable vertical scrolling if content overflows */
            z-index: 1000; /* Ensure the sidebar is above other content */
            transition: transform 0.3s ease; /* Smooth transition */
        }

        .sidebar h3 {
            margin-bottom: 30px;
            color: #ffffff; /* White for the title */
        }

        .sidebar a {
            color: #adb5bd; /* Lighter gray text for links */
            display: block;
            padding: 10px 15px;
            margin: 5px 0;
            text-decoration: none;
            border-radius: 5px; /* Rounded corners */
            transition: background-color 0.3s; /* Smooth transition */
        }

        .sidebar a:hover,
        .sidebar a.active {
            color: #ffffff; /* White on hover */
            background-color: #495057; /* Slightly lighter background on hover */
        }

        .container {
            margin-top: 80px; /* Space for fixed header */
            padding: 15px;
            padding-top: 60px;
        }

        .notification-card {
            background-color: #ffffff; /* White background for cards */
            border-radius: 5px; /* Rounded corners */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #000000; /* Dark footer background */
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%); /* Hide sidebar off-screen */
            }

            .sidebar.active {
                transform: translateX(0); /* Show sidebar */
            }

            .header {
                position: fixed;
                width: 100%;
                z-index: 1000; /* Ensure header stays above other elements */
            }

            .mobile-sidebar-btn {
                display: block;
                color: white;
            }
        }

        @media (min-width: 769px) {
            .mobile-sidebar-btn {
                display: none;
            }

            .content {
                margin-left: 250px; /* Adjust content margin for desktop */
            margin-bottom: 50px;
              }
        }
    </style>

</head>

<body>

    <div class="header d-flex justify-content-between align-items-center">
        <button class="btn btn-dark mobile-sidebar-btn" id="sidebarToggle"><i class="fas fa-bars"></i></button>
        <h1 class="h3"></h1>
        <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="profileDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <i class="fas fa-user"></i>
                     <%= tenant ? tenant.username : 'Guest' %> <!-- Provide a default value if tenant is null -->
                 </button>
                 
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                <a class="dropdown-item" href="/tenant/profile"><i class="fas fa-user-cog"></i> Profile Settings</a>
                <a class="dropdown-item" href="/tenantPortal/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </div>

    <nav class="sidebar">
        <h3 class="text-white"><strong>Tenant Portal</strong></h3>
        <ul class="nav flex-column">
           
            <li class="nav-item">
                <a class="nav-link" href="/tenantPortal/dashboard"><i class="fas fa-tachometer-alt"></i>Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/tenant/rent"><i class="fas fa-dollar-sign"></i> Rent Payments</a>
          </li>
           
            <li class="nav-item">
                <a class="nav-link" href="/tenant/maintenance"><i class="fas fa-tools"></i> Maintenance Requests</a>
            </li>
           
            <li class="nav-item">
                <a class="nav-link" href="/tenant/contact"><i class="fas fa-comments"></i> Contact Management</a>
            </li>
        </ul>
    </nav>
   
    <div class="container mt-5"> 
       <h1>Manage Payments</h1>
      
<!-- Payment History Section -->
<div class="card mt-4">
       <div class="card-header" style="background-color: #003366; color: #ffffff;">
           <h5>Payment History</h5>
       </div>
       <div class="card-body">
           <div class="table-responsive"> <!-- Responsive table -->
               <table class="table table-striped">
                   <thead>
                       <tr>
                           <th>Date</th>
                           <th>Transaction ID</th> <!-- Added Transaction ID -->
                           <th>Payment Type</th>
                           <th>Rent Paid</th>
                           <th>Rent Due</th>
                           <th>Utility Paid</th>
                           <th>Utility Due</th>
                           <th>Payment Method</th>
                           <th>Status</th>
                           <th>Receipt</th> <!-- New column for receipt download -->
                       </tr>
                   </thead>
                   <tbody>
                       <% paymentHistory.forEach(payment => { %>
                           <tr>
                               <td><%= new Date(payment.date).toLocaleDateString() %></td>
                               <td><%= payment.transactionId %></td> <!-- Display Transaction ID -->
                               <td>
                                   <% if (payment.type === 'rent') { %>
                                       <i class="fas fa-home"></i> Rent
                                   <% } else if (payment.type === 'utility') { %>
                                       <i class="fas fa-lightbulb"></i> Utility
                                   <% } else { %>
                                       <i class="fas fa-dollar-sign"></i> Other Payment
                                   <% } %>
                               </td>
                               <td>
                                   <% if (payment.type === 'rent') { %>
                                       $<%= payment.amountPaid.toFixed(2) %> <!-- Rent Paid -->
                                   <% } else { %>
                                       $0 <!-- No Rent Paid for Utility -->
                                   <% } %>
                               </td>
                               <td>
                                   <% if (payment.type === 'rent') { %>
                                       $<%= payment.amountDue.toFixed(2) %> <!-- Rent Due -->
                                   <% } else { %>
                                       $0 <!-- No Rent Due for Utility -->
                                   <% } %>
                               </td>
                               <td>
                                   <% if (payment.type === 'utility') { %>
                                       $<%= payment.utilityPaid.toFixed(2) %> <!-- Utility Paid -->
                                   <% } else { %>
                                       $0 <!-- No Utility Paid for Rent -->
                                   <% } %>
                               </td>
                               <td>
                                   <% if (payment.type === 'utility') { %>
                                       $<%= payment.utilityDue.toFixed(2) %> <!-- Utility Due -->
                                   <% } else { %>
                                       $0 <!-- No Utility Due for Rent -->
                                   <% } %>
                               </td>
                               <td><%= payment.method %></td>
                               <td>
                                   <% if (payment.status === 'completed') { %>
                                       <i class="fas fa-check-circle text-success"></i> <%= payment.status %>
                                   <% } else { %>
                                       <i class="fas fa-times-circle text-danger"></i> <%= payment.status %>
                                   <% } %>
                               </td>
                               <td>
                                   <a href="/download-receipt/<%= payment.transactionId %>" class="text-primary" title="Download Receipt">
                                       <i class="fas fa-download"></i>
                                   </a>
                               </td>
                           </tr>
                       <% }) %>
                   </tbody>
               </table>
           </div> 
       </div> 
   </div>
   
   <div class="row mt-3">
       <div class="col-12 col-md-6 mb-2"> <!-- Use full width on smaller screens -->
           <button class="btn btn-primary btn-block" data-toggle="modal" data-target="#rentPaymentModal">
               <i class="fas fa-plus"></i> Make Rent Payment
           </button>
       </div>
       <div class="col-12 col-md-6"> <!-- Use full width on smaller screens -->
           <button class="btn btn-secondary btn-block" data-toggle="modal" data-target="#utilityPaymentModal">
               <i class="fas fa-plus"></i> Make Utility Payment
           </button>
       </div>
   </div>
   
   
   <!-- Rent Payment Modal -->
   <div class="modal fade" id="rentPaymentModal" tabindex="-1" role="dialog" aria-labelledby="rentPaymentModalLabel" aria-hidden="true">
       <div class="modal-dialog" role="document">
           <div class="modal-content">
               <div class="modal-header" style="background-color: #003366; color: #ffffff;">
                   <h5 class="modal-title" id="rentPaymentModalLabel">Make Rent Payment</h5>
                   <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                   </button>
               </div>
               <div class="modal-body">
                   <form id="rentPaymentForm">
                       <div class="form-group">
                           <label for="rentAmount">Payment Amount</label>
                           <input type="number" class="form-control" id="rentAmount" name="amount" placeholder="Enter amount" required>
                       </div>
                       <div class="form-group">
                           <label for="rentPaymentMethod">Payment Method</label>
                           <select class="form-control" id="rentPaymentMethod" name="paymentMethod" required>
                               <option value="">Select Payment Method</option>
                               <option value="creditCard">Credit Card</option>
                               <option value="bankTransfer">Bank Transfer</option>
                               <option value="mobilePayment">Mobile Payment</option>
                           </select>
                       </div>
                       <button type="submit" class="btn btn-primary">Pay Rent</button>
                   </form>
               </div>
           </div>
       </div>
   </div>
   
   <!-- Utility Payment Modal -->
   <div class="modal fade" id="utilityPaymentModal" tabindex="-1" role="dialog" aria-labelledby="utilityPaymentModalLabel" aria-hidden="true">
       <div class="modal-dialog" role="document">
           <div class="modal-content">
               <div class="modal-header" style="background-color: #003366; color: #ffffff;">
                   <h5 class="modal-title" id="utilityPaymentModalLabel">Make Utility Payment</h5>
                   <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                   </button>
               </div>
               <div class="modal-body">
                   <form id="utilityPaymentForm">
                       <div class="form-group">
                           <label for="utilityAmount">Utility Amount</label>
                           <input type="number" class="form-control" id="utilityAmount" name="amount" placeholder="Enter amount" required>
                       </div>
                       <div class="form-group">
                           <label for="utilityPaymentMethod">Payment Method</label>
                           <select class="form-control" id="utilityPaymentMethod" name="paymentMethod" required>
                               <option value="">Select Payment Method</option>
                               <option value="creditCard">Credit Card</option>
                               <option value="bankTransfer">Bank Transfer</option>
                               <option value="mobilePayment">Mobile Payment</option>
                           </select>
                       </div>
                       <button type="submit" class="btn btn-secondary">Pay Utility</button>
                   </form>
               </div>
           </div>
       </div>
   </div>
   

   <footer class="text-center py-0">
       &copy; 2024 Tenant Portal. All
       Rights Reserved || powered by <a
              href="https://vickinstechnologies.com"
              target="_blank">Vickins
              Technologies</a>
</footer>




<!-- Bootstrap JS -->
<script
       src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script
       src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- jQuery for sidebar toggle -->
<script>
       $('#sidebarToggle').on('click', function () {
              $('.sidebar').toggle();
       });

       
</script>



    <script>
       // Handle Rent Payment Form Submission
       $('#rentPaymentForm').on('submit', function(event) {
           event.preventDefault();
           const amount = $('#rentAmount').val();
           const paymentMethod = $('#rentPaymentMethod').val();

           // AJAX request to submit rent payment
           $.post('/tenant/rent/pay', { amount, paymentMethod }, function(response) {
               // Handle success (e.g., refresh payment history or show a success message)
               location.reload(); // Reloads the page to see the updated payment history
           }).fail(function() {
               alert('Error processing rent payment.');
           });
       });

       // Handle Utility Payment Form Submission
       $('#utilityPaymentForm').on('submit', function(event) {
           event.preventDefault();
           const amount = $('#utilityAmount').val();
           const paymentMethod = $('#utilityPaymentMethod').val();

           // AJAX request to submit utility payment
           $.post('/tenant/utilities/pay', { amount, paymentMethod }, function(response) {
               // Handle success (e.g., refresh payment history or show a success message)
               location.reload(); // Reloads the page to see the updated payment history
           }).fail(function() {
               alert('Error processing utility payment.');
           });
       });
   </script>

</body>

</html>
